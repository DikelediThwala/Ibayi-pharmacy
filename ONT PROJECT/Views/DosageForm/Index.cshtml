@model ONT_PROJECT.Models.Pharmacy

@{
    ViewData["Title"] = "Manage Dosage Forms";
    Layout = "_ManagerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark fw-bold"><i class="fas fa-pills"></i> Dosage Forms</h2>
    <a class="btn btn-primary shadow-sm px-4 py-2" asp-action="Create" asp-controller="DosageForm">
        <i class="bi bi-plus-circle"></i> Add New Dosage Form
    </a>
</div>

<hr style="height: 5px; background-color: #011425; border: none;" />

<div class="accordion" id="dosageFormAccordion">

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTablet">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTablet" aria-expanded="true" aria-controls="collapseTablet">
                1.Tablet
            </button>
        </h2>
        <div id="collapseTablet" class="accordion-collapse collapse" aria-labelledby="headingTablet" data-bs-parent="#dosageFormAccordion">
            <div class="accordion-body">
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-controller="DosageForm" asp-route-id="1" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="DosageForm" asp-route-id="1" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingCapsule">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCapsule" aria-expanded="false" aria-controls="collapseCapsule">
                2.Capsule
            </button>
        </h2>
        <div id="collapseCapsule" class="accordion-collapse collapse" aria-labelledby="headingCapsule" data-bs-parent="#dosageFormAccordion">
            <div class="accordion-body">
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-controller="DosageForm" asp-route-id="2" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="DosageForm" asp-route-id="2" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>

    

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingSyrup">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSyrup" aria-expanded="false" aria-controls="collapseSyrup">
                3.Syrup
            </button>
        </h2>
        <div id="collapseSyrup" class="accordion-collapse collapse" aria-labelledby="headingSyrup" data-bs-parent="#dosageFormAccordion">
            <div class="accordion-body">
                <p><strong>Description:</strong> Liquid oral preparation.</p>
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-controller="DosageForm" asp-route-id="3" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="DosageForm" asp-route-id="3" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add more dosage forms like Injection, Cream, etc. following same format -->

</div>

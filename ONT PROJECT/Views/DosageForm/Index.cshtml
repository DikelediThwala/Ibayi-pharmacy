@model IEnumerable<ONT_PROJECT.Models.DosageForm>

@{
    ViewData["Title"] = "Dosage Forms";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Dosage Forms List</h2>
        <a asp-action="Create" asp-controller="DosageForm" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Dosage Form
        </a>
    </div>
    <hr style="height: 5px; background-color: #011425; border: none;" />

    <div class="card shadow rounded-4 border-info">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0"><i class="bi bi-ui-checks-grid me-2"></i> Dosage Forms</h5>
        </div>
        <div class="card-body bg-light">
            <div class="table-responsive">
                <table id="dosageFormsTable" class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th></th>
                            <th>Form Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var form in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@form.FormName</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="DosageForm" asp-route-id="@form.FormId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="DosageForm" asp-route-id="@form.FormId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted fst-italic">No dosage forms available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dosageFormsTable').DataTable({
            pageLength: 7,
            lengthChange: false,
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });

        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    });
</script>

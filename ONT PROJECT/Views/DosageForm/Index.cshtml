@model ONT_PROJECT.Models.Pharmacy

@{
    ViewData["Title"] = "Manage Dosage Forms";
    Layout = "_ManagerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark fw-bold"><i class="fas fa-users-cog"></i> Available Dosage Forms</h2>
    <a class="btn btn-success shadow-sm px-4 py-2" asp-action="Create" asp-controller="DosageForm">
        <i class="bi bi-plus-circle"></i>Add New Dosage Form
    </a>
</div>
<hr style="height: 5px; background-color: #011425; border: none;" />

<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Tablet</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Capsule</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Syrup</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Injection</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Cream</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Ointment</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Inhaler</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Suppository</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Gel</strong>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <strong>Spray</strong>
            </div>
        </div>

@model ONT_PROJECT.Models.Pharmacy

@{
    ViewData["Title"] = "Manage Dosage Forms";
    Layout = "_ManagerLayout";
}


<style>
    .card:hover {
        background-color: #f0f8ff; /* Light blue shade */
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .card-body strong {
        color: #011425;
        transition: color 0.3s ease-in-out;
    }

    .card:hover .card-body strong {
        color: #0d6efd; /* Bootstrap primary */
    }
</style>


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark fw-bold"><i class="fas fa-users-cog"></i> Available Dosage Forms</h2>
    <a class="btn btn-primary shadow-sm px-4 py-2" asp-action="Create" asp-controller="DosageForm">
        <i class="bi bi-plus-circle"></i>Add New Dosage Form
    </a>
</div>
<hr style="height: 5px; background-color: #011425; border: none;" />

<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">

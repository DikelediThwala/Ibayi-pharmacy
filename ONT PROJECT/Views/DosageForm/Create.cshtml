@model ONT_PROJECT.Models.DosageForm

@{
    ViewData["Title"] = "Manage Dosage Form";
    Layout = "_ManagerLayout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-clipboard-plus me-2 text-primary"></i> Add Dosage Form
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="SaveDosageForm" method="post">
            <div class="mb-4">
                <label asp-for="FormName" class="form-label">Form Name <span class="text-danger">*</span></label>
                <input asp-for="FormName" class="form-control" placeholder="e.g., Tablet, Syrup, Injection" />
                <span asp-validation-for="FormName" class="text-danger small"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/DosageForm/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (optional) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

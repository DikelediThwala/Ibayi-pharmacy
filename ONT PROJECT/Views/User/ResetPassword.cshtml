@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background: linear-gradient(to right, darkcyan, white);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Montserrat', sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            max-width: 420px;
            width: 100%;
        }

        h3 {
            color: darkcyan;
            font-weight: 700;
        }

        .form-control:focus {
            border-color: darkcyan;
            box-shadow: 0 0 0 0.15rem rgba(0, 139, 139, 0.3);
        }

        button {
            border-radius: 20px;
            border: 1px solid darkcyan;
            background-color: darkcyan;
            color: #fff;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 10px 20px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            button:hover {
                background-color: #00796b;
            }

        span.text-danger {
            font-size: 0.8rem;
        }

        a {
            color: darkcyan;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .alert {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="card p-4 shadow-lg">
        <h3 class="text-center mb-3">🔑 Reset Password</h3>
        <p class="text-center text-muted mb-4">Enter your temporary and new password</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form id="resetForm" method="post" action="@Url.Action("ResetPassword", "User")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Email" value="@Model.Email" />

            <div class="mb-3">
                <label asp-for="TemporaryPassword" class="form-label">Temporary Password</label>
                <input asp-for="TemporaryPassword" class="form-control" type="password" placeholder="Enter temporary password" />
                <span asp-validation-for="TemporaryPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="w-100">Reset Password</button>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {

            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                Swal.fire({
                    icon: "success",
                    title: "Password Changed",
                    text: successMessage,
                    confirmButtonText: "OK"
                }).then(() => {
                    window.location.href = "/CustomerRegister/Register";
                });
            }

            $("#resetForm").submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: $(this).attr("action"),
                    type: "POST",
                    data: $(this).serialize(),
                    dataType: "json",
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: "success",
                                title: "Password Changed",
                                text: response.message,
                                confirmButtonText: "OK"
                            }).then(() => {
                                window.location.href = "/CustomerRegister/Register";
                            });
                        } else if (response.errors && response.errors.length > 0) {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                html: response.errors.join("<br/>")
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Something went wrong. Please try again."
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something went wrong. Please try again."
                        });
                    }
                });
            });

        });
    </script>
</body>
</html>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_ManagerLayout";
    var managers = ViewBag.Managers as List<ONT_PROJECT.Models.TblUser>;
    var pharmacists = ViewBag.Pharmacists as List<ONT_PROJECT.Models.TblUser>;
    var customers = ViewBag.Customers as List<ONT_PROJECT.Models.TblUser>;
}

@Html.AntiForgeryToken() <!-- Added for AJAX -->
<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        min-width: 700px;
        background: #f5f5f5;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-bottom: 2rem;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .table-title h2 {
            margin: 0;
            font-size: 20px;
        }

        .table-title .btn {
            float: right;
            color: #fff;
            background: #03A9F4;
            border: none;
            min-width: 120px;
            border-radius: 2px;
            margin-left: 10px;
        }

    table.table {
        text-align: center;
        vertical-align: middle;
    }

        table.table tr th, table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
        }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show successAlert" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["GeneratedPassword"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show successAlert" role="alert">
            <strong>New user registered!</strong><br />
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold"><i class="fas fa-users-cog"></i> Manage Pharmacy Users</h2>
        <a asp-action="Create" asp-controller="User" class="btn btn-primary shadow-sm px-4 py-2">
            <i class="fas fa-user-plus me-2"></i> Register User
        </a>
    </div>

    <hr class="mb-5" style="height: 4px; background-color: #011425; border: none;" />

    <!-- MANAGERS -->
    <section id="Manager" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-primary"></i>
            Below is the list of <strong>Pharmacy Managers</strong> who are responsible for overseeing overall pharmacy operations.
        </p>
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe7ef;</i> Managers</h2>
            </div>
            <table id="managerTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in managers.Where(u => u.Status == "Active"))
                    {
                        <tr>
                            <td>@user.Title</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td><span class="badge bg-primary">@user.Role</span></td>
                            <td>
                                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-userid="@user.UserId" title="Deactivate">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- PHARMACISTS -->
    <section id="Pharmacist" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-dark"></i>
            <strong>Pharmacists</strong> who manage prescriptions, stock, and patient care within the pharmacy.
        </p>
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe7ef;</i> Pharmacists</h2>
            </div>
            <table id="pharmacistTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in pharmacists.Where(u => u.Status == "Active"))
                    {
                        <tr>
                            <td>@user.Title</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td><span class="badge bg-secondary">@user.Role</span></td>
                            <td>
                                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-userid="@user.UserId" title="Deactivate">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <hr class="mb-5" style="height: 5px; background-color: #011425; border: none;" />

    <!-- DEACTIVATED USERS -->
    <section id="DeactivatedUsers" class="reviews-section mt-5">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-danger"></i>
            List of <strong>Inactive Users</strong>. You can reactivate them here.
        </p>
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center bg-secondary">
                <h2><i class="material-icons">&#xe7ef;</i> Deactivated Users</h2>
            </div>
            <table id="deactivatedTable" class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Activate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.DeactivatedUsers as List<ONT_PROJECT.Models.TblUser>)
                    {
                        <tr>
                            <td>@user.Title</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td><span class="badge bg-dark">@user.Role</span></td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-success activate-btn" data-userid="@user.UserId" title="Activate">
                                    <i class="material-icons">&#xE5CA;</i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<!-- Deactivate User Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" aria-labelledby="deactivateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deactivateModalLabel">Deactivate User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to deactivate <strong id="deactivateUserName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeactivate" class="btn btn-danger">Deactivate</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
        var tables = ['#managerTable', '#pharmacistTable', '#deactivatedTable'];
        var userIdToDeactivate = 0;
        var rowToDeactivate;

        // Initialize DataTables
        tables.forEach(function (tableId) {
            if ($.fn.dataTable.isDataTable(tableId)) $(tableId).DataTable().destroy();
            var pageLength = tableId === '#deactivatedTable' ? 2 : 6;
            $(tableId).DataTable({ pageLength: pageLength, lengthChange: false, ordering: false, language: { search: "Search table:", paginate: { previous: "← Previous", next: "Next →" } } });
        });

        // Auto-close alerts
        function autoCloseAlerts() {
            setTimeout(function () { $('.successAlert').each(function () { new bootstrap.Alert(this).close(); }); }, 4000);
        }
        autoCloseAlerts();

        // --- DEACTIVATE USER ---
        $(document).on('click', '.deactivate-btn', function () {
            userIdToDeactivate = $(this).data('userid');
            rowToDeactivate = $(this).closest('tr');
            var firstName = rowToDeactivate.find('td:nth-child(2)').text();
            var lastName = rowToDeactivate.find('td:nth-child(3)').text();
            $('#deactivateUserName').text(firstName + ' ' + lastName);
            new bootstrap.Modal(document.getElementById('deactivateModal')).show();
        });

        $('#confirmDeactivate').click(function () {
            if (!userIdToDeactivate) return;
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '/User/SoftDelete',
                type: 'POST',
                data: { id: userIdToDeactivate },
                headers: { 'RequestVerificationToken': token },
                success: function (response) {
                    if (!response.success) return alert(response.message || 'Failed to deactivate user.');
                    // Move row to deactivated table
                    var activeTable = rowToDeactivate.closest('table').DataTable();
                    var tds = rowToDeactivate.children('td').map(function () { return $(this).html(); }).get();
                    activeTable.row(rowToDeactivate).remove().draw();
                    var deactivatedTable = $('#deactivatedTable').DataTable();
                    deactivatedTable.row.add([tds[0], tds[1], tds[2], tds[3], tds[4], tds[5], `<button type="button" class="btn btn-sm btn-outline-success activate-btn" data-userid="${userIdToDeactivate}" title="Activate"><i class="material-icons">&#xE5CA;</i></button>`]).draw();
                    $('<div class="alert alert-success alert-dismissible fade show successAlert" role="alert">User ' + tds[1] + ' ' + tds[2] + ' deactivated successfully.<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>').prependTo('.container');
                    autoCloseAlerts();
                    bootstrap.Modal.getInstance(document.getElementById('deactivateModal')).hide();
                },
                error: function () { alert('Failed to deactivate user.'); }
            });
        });

        // --- ACTIVATE USER ---
        $(document).on('click', '.activate-btn', function () {
            var userIdToActivate = $(this).data('userid');
            var $row = $(this).closest('tr');
            var tds = $row.children('td').map(function () { return $(this).html(); }).get();
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '/User/Activate',
                type: 'POST',
                data: { id: userIdToActivate },
                headers: { 'RequestVerificationToken': token },
                success: function (response) {
                    if (!response.success) return alert(response.message || 'Failed to activate user.');
                    $('#deactivatedTable').DataTable().row($row).remove().draw();
                    var targetTableId = tds[5].toLowerCase().includes('manager') ? '#managerTable' : '#pharmacistTable';
                    var targetTable = $(targetTableId).DataTable();
                    var deactivateBtn = `<button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-userid="${userIdToActivate}" title="Deactivate"><i class="material-icons">&#xE872;</i></button>`;
                    targetTable.row.add([tds[0], tds[1], tds[2], tds[3], tds[4], `<span class="badge ${targetTableId === '#managerTable' ? 'bg-primary' : 'bg-secondary'}">${tds[5]}</span>`, deactivateBtn]).draw();
                    $('<div class="alert alert-success alert-dismissible fade show successAlert" role="alert">User ' + tds[1] + ' ' + tds[2] + ' activated successfully.<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>').prependTo('.container');
                    autoCloseAlerts();
                },
                error: function () { alert('Failed to activate user.'); }
            });
        });
    });
</script>

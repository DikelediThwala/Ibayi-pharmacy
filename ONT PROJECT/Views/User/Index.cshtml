@{
    ViewData["Title"] = "Manage Users";
    Layout = "_ManagerLayout";
    var managers = ViewBag.Managers as List<ONT_PROJECT.Models.TblUser>;
    var pharmacists = ViewBag.Pharmacists as List<ONT_PROJECT.Models.TblUser>;
    var customers = ViewBag.Customers as List<ONT_PROJECT.Models.TblUser>;
}

<!-- CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-4">
    @if (TempData["GeneratedPassword"] != null)
    {
        <div class="alert alert-success">
            <strong>New user registered!</strong><br />
            Temporary Password: <code>@TempData["GeneratedPassword"]</code>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold"><i class="fas fa-users-cog"></i> Manage Pharmacy Users</h2>
        <a class="btn btn-primary shadow-sm px-4 py-2" asp-action="Create" asp-controller="User">
            <i class="fas fa-user-plus me-2"></i> Register User
        </a>
    </div>

    <hr class="mb-5" style="height: 4px; background-color: #011425; border: none;" />

    <!-- MANAGERS -->
    <section id="Manager" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-primary"></i>
            Below is the list of <strong>Pharmacy Managers</strong> who are responsible for overseeing overall pharmacy operations.
        </p>
        <div class="card shadow mb-5 rounded-4 border-primary">
            <div class="card-header text-white bg-primary rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i> Manager</h5>
            </div>
            <div class="card-body bg-light">
                <table id="managerTable" class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Title</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in managers)
                        {
                            <tr>
                                <td>@user.Title</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td><span class="badge bg-primary">@user.Role</span></td>
                                <td>
                                    <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- PHARMACISTS -->
    <section id="Pharmacist" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-dark"></i>
            <strong>Pharmacist</strong> who manages prescriptions, stock, and patient care within the pharmacy.
        </p>
        <div class="card shadow mb-5 rounded-4 border-dark">
            <div class="card-header bg-dark text-white rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i> Pharmacists</h5>
            </div>
            <div class="card-body bg-light">
                <table id="pharmacistTable" class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in pharmacists)
                        {
                            <tr>
                                <td>@user.Title</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td><span class="badge bg-dark">@user.Role</span></td>
                                <td>
                                    <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- CUSTOMERS -->
    <section id="Customers" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-primary"></i>
            <strong>Customers</strong> registered in the pharmacy system who receive services and prescriptions.
        </p>
        <div class="card shadow rounded-4 border-info">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i> Customers</h5>
            </div>
            <div class="card-body bg-light">
                <table id="customerTable" class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Title</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in customers)
                        {
                            <tr>
                                <td>@user.Title</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td><span class="badge bg-primary">@user.Role</span></td>
                                <td>
                                    <a asp-action="Edit" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="User" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<!-- JS SCRIPTS -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('#managerTable, #pharmacistTable, #customerTable').DataTable({
            pageLength: 7,
            lengthChange: false,
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });
    });
</script>

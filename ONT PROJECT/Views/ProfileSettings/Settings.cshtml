@model ONT_PROJECT.Models.TblUser
@{
    ViewData["Title"] = "Profile Settings";
    Layout = "_CustomerLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm p-4 text-center" style="width: 400px; background: #fff; border-radius: 8px;">
        <h3 class="mb-4" style="color: #566787; font-family: 'Varela Round', sans-serif;">Profile Settings</h3>

        <div class="d-grid gap-3">
            <!-- Edit Profile Button -->
            <a asp-controller="ProfileSettings" asp-action="Index" class="btn" style="background: #4b5366; color: #fff;">
                <i class="bi bi-person-lines-fill me-2"></i> Edit Profile
            </a>

            <!-- Change Password Button -->
            <a asp-controller="ProfileSettings" asp-action="ChangePassword" class="btn" style="background: #f0ad4e; color: #fff;">
                <i class="bi bi-lock-fill me-2"></i> Change Password
            </a>

            <!-- Delete Account Button -->
            <form asp-controller="ProfileSettings" asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure you want to delete your account?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn" style="background: #d9534f; color: #fff;">
                    <i class="bi bi-trash-fill me-2"></i> Delete Account
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Varela Round', sans-serif;
        color: #566787;
        background: #f5f5f5;
        font-size: 13px;
    }

    .btn {
        padding: 10px 15px;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            opacity: 0.85;
            text-decoration: none;
            color: #fff !important;
        }
</style>

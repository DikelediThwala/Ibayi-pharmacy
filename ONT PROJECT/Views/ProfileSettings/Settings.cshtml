@model ONT_PROJECT.Models.TblUser
@{
    ViewData["Title"] = "Profile Settings";
    Layout = "_CustomerLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

<div class="container position-relative" style="min-height: 70vh;">
    <!-- Background overlapping area -->
    <div class="position-absolute top-0 start-50 translate-middle-x w-100"
         style="height: 150px; background: #4b5366;
                border-bottom-left-radius: 50% 20%;
                border-bottom-right-radius: 50% 20%; z-index: 0;">
    </div>

    <!-- Card with buttons -->
    <div class="card shadow-sm p-4 text-center position-relative"
         style="width: 400px; margin: 0 auto; margin-top: 80px;
                background: #fff; border-radius: 12px; z-index: 1;">
        <h3 class="mb-4" style="color: #566787; font-family: 'Varela Round', sans-serif;">
            Profile Settings
        </h3>

        <div class="d-grid gap-3">
            <!-- Edit Profile Button -->
            <a asp-controller="ProfileSettings" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-person-lines-fill me-2"></i> Edit Profile
            </a>

            <!-- Change Password Button -->
            <a asp-controller="ProfileSettings" asp-action="ChangePassword" class="btn btn-warning">
                <i class="bi bi-lock-fill me-2"></i> Change Password
            </a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Varela Round', sans-serif;
        color: #566787;
        background: #f5f5f5;
        font-size: 13px;
    }

    .btn {
        padding: 10px 15px;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.3s ease;
        color: #fff !important;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #4b5366;
    }

        .btn-primary:hover {
            opacity: 0.85;
        }

    .btn-warning {
        background-color: #f0ad4e;
    }

        .btn-warning:hover {
            opacity: 0.85;
        }
</style>

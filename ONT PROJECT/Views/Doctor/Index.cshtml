@model IEnumerable<ONT_PROJECT.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Stylesheets -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        min-width: 700px;
        background: #f5f5f5; /* grey container like your Users tables */
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-bottom: 2rem;
    }

    .table-title {
        color: #fff;
        background: #4b5366; /* dark header color */
        padding: 16px 25px;
        margin: -20px -25px 10px; /* removes the white gap above container */
        border-radius: 3px 3px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .table-title h2 {
            margin: 0;
            font-size: 20px;
        }


    table.table th, table.table td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
    }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="mb-4 p-4 rounded shadow-sm bg-light border-start border-4 border-primary">
        <p class="lead text-muted mb-0">
            <i class="bi bi-info-circle-fill me-2 text-primary"></i>
            List of ative doctors currently registered in the system, including their contact details and practice numbers.
        </p>
    </div>
</div>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xE7EF;</i> Doctors' <b>List</b></h2>
                <a asp-action="Create" asp-controller="Doctor" class="btn btn-primary">
                    <i class="material-icons">&#xE147;</i> Add Doctor
                </a>
            </div>

            <!-- ACTIVE DOCTORS -->
            <table id="activeDoctorsTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Practice No</th>
                        <th>Contact No</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in ViewBag.ActiveDoctors)
                    {
                        <tr>
                            <td>@doctor.DoctorId</td>
                            <td>@doctor.Name</td>
                            <td>@doctor.Surname</td>
                            <td>@doctor.PracticeNo</td>
                            <td>@doctor.ContactNo</td>
                            <td>@doctor.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-id="@doctor.DoctorId" data-name="@doctor.Name @doctor.Surname">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />

            <hr class="mb-5" style="height: 4px; background-color: #011425; border: none;" />

        </div>
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-danger"></i>
            List of <strong>Inactive Doctors</strong>. You can reactivate them here.
        </p>
        <!-- DEACTIVATED DOCTORS -->
        <div class="table-wrapper">
            <div class="table-title table-title-deactivated d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe7ef;</i> Deactivated Doctors</h2>
            </div>
            <table id="deactivatedDoctorsTable" class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Practice No</th>
                        <th>Contact No</th>
                        <th>Email</th>
                        <th>Actvate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in ViewBag.DeactivatedDoctors)
                    {
                        <tr>
                            <td>@doctor.DoctorId</td>
                            <td>@doctor.Name</td>
                            <td>@doctor.Surname</td>
                            <td>@doctor.PracticeNo</td>
                            <td>@doctor.ContactNo</td>
                            <td>@doctor.Email</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-success activate-btn" data-id="@doctor.DoctorId">
                                    <i class="material-icons">&#xE5CA;</i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Deactivate Doctor Modal -->
<div class="modal fade" id="deactivateDoctorModal" tabindex="-1" aria-labelledby="deactivateDoctorLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deactivateDoctorLabel">Deactivate Doctor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to deactivate <strong id="doctorName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeactivateDoctor" class="btn btn-danger">Deactivate</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function() {
        var doctorIdToDeactivate = 0;

        // Initialize DataTables
        $('#activeDoctorsTable, #deactivatedDoctorsTable').DataTable({
            pageLength: 6,
            lengthChange: false,
            ordering: true,
            columnDefs: [{ orderable: false, targets: 6 }],
            language: { search: "Search table:", paginate: { previous: "← Previous", next: "Next →" } }
        });

        // Auto-close alerts
        setTimeout(() => $('.alert').each(function() { new bootstrap.Alert(this).close(); }), 4000);

        // Deactivate button click
        $(document).on('click', '.deactivate-btn', function() {
            doctorIdToDeactivate = $(this).data('id');
            var doctorName = $(this).data('name');
            $('#doctorName').text(doctorName);
            new bootstrap.Modal(document.getElementById('deactivateDoctorModal')).show();
        });

        // Confirm deactivate
        $('#confirmDeactivateDoctor').click(function() {
            if (doctorIdToDeactivate) {
                $.post('/Doctor/SoftDelete', { id: doctorIdToDeactivate })
                .done(function() { location.reload(); })
                .fail(function() { alert('Failed to deactivate doctor.'); });
            }
        });

        // Activate doctor
        $(document).on('click', '.activate-btn', function() {
            var doctorId = $(this).data('id');
            $.post('/Doctor/Activate', { id: doctorId })
            .done(function() { location.reload(); })
            .fail(function() { alert('Failed to activate doctor.'); });
        });
    });
</script>

@model IEnumerable<ONT_PROJECT.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
    Layout = "_ManagerLayout";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Medication</h2>
        <a asp-action="Create" asp-controller="Doctor" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Doctor
        </a>
    </div>
    <hr style="height: 5px; background-color: #011425; border: none;" />
    <section id="Doctors" class="reviews-section">
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-primary"></i>
            <strong> Active Doctors</strong> registered in the system who provide medical care and consultations.
        </p>
        <div class="card shadow rounded-4 border-info">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-user-md me-2"></i> Doctors</h5>
            </div>
            <div class="card-body bg-light">
                <div class="table-responsive">
                    <table id="doctorsTable" class="table table-hover table-bordered text-center align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Practice No</th>
                                <th>Contact No</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model)
                            {
                                if (doctor != null)
                                {
                                    <tr>
                                        <td>@doctor.Name</td>
                                        <td>@doctor.Surname</td>
                                        <td>@doctor.PracticeNo</td>
                                        <td>@doctor.ContactNo</td>
                                        <td>@doctor.Email</td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="Doctor" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-controller="Doctor" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- CSS and JS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#doctorsTable').DataTable({
            pageLength: 7,
            lengthChange: false,
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });
    });
</script>
<script>
    setTimeout(function () {
        var alert = document.getElementById('successAlert');
        if (alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }
    }, 4000); 
</script>
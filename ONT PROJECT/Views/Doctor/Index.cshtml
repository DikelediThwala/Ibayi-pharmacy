@model IEnumerable<ONT_PROJECT.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

    table.table th, table.table td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
    }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="mb-4 p-4 rounded shadow-sm bg-light border-start border-4 border-primary">
        <p class="lead text-muted mb-0">
            <i class="bi bi-info-circle-fill me-2 text-primary"></i>
            List of all doctors currently registered in the system, including their contact details and practice numbers.
        </p>
    </div>
</div>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xE7EF;</i> Doctors' <b>List</b></h2>
                <a asp-action="Create" asp-controller="Doctor" class="btn btn-primary">
                    <i class="material-icons">&#xE147;</i> Add Doctor
                </a>
            </div>

            <table id="doctorsTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Practice No</th>
                        <th>Contact No</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int count = 1;
                        foreach (var doctor in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@doctor.Name</td>
                                <td>@doctor.Surname</td>
                                <td>@doctor.PracticeNo</td>
                                <td>@doctor.ContactNo</td>
                                <td>@doctor.Email</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Doctor" asp-route-id="@doctor.DoctorId"
                                       class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                        <i class="material-icons">&#xE254;</i>
                                    </a>
                                    <form asp-action="Delete" asp-controller="Doctor" asp-route-id="@doctor.DoctorId"
                                          method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="material-icons">&#xE872;</i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
 *@
<script>
    $(document).ready(function () {
        $('#doctorsTable').DataTable({
            pageLength: 6,
            lengthChange: false,
            searching: true,
            ordering: true,
            columnDefs: [
                { orderable: false, targets: 6 } // Actions column not sortable
            ],
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });

        // Auto-hide success message after 4 seconds
            setTimeout(function () {
        var success = document.getElementById('successAlert');
        if (success) {
            var bsAlert = new bootstrap.Alert(success);
            bsAlert.close();
        }
        var error = document.getElementById('errorAlert');
        if (error) {
            var bsAlert = new bootstrap.Alert(error);
            bsAlert.close();
        }
    }, 4000);
    });
</script>

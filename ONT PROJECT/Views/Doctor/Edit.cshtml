@model ONT_PROJECT.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
    Layout = "_ManagerLayout";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        // Auto-hide after 5 seconds (5000 ms)
        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                // Fade out using Bootstrap's built-in classes
                alert.classList.remove('show');
                alert.classList.add('hide');
            }
        }, 5000);
    </script>
}



<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Edit Doctor
    </h2>
</div>


<hr style="height: 4px; background-color: #011425; border: none;" />


<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please update the details below. Fields marked with <span class="text-danger">*</span> are required.
</div>


<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            
            <input type="hidden" asp-for="DoctorId" />

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Dikeledi" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Surname" class="form-label">Surname <span class="text-danger">*</span></label>
                    <input asp-for="Surname" class="form-control" placeholder="e.g., Thwala" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="PracticeNo" class="form-label">Practice Number <span class="text-danger">*</span></label>
                    <input asp-for="PracticeNo" class="form-control" placeholder="G13454" />
                    <span asp-validation-for="PracticeNo" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContactNo" class="form-label">Contact Number <span class="text-danger">*</span></label>
                    <input asp-for="ContactNo" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., doctor@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>

         
            <div class="d-flex justify-content-between mt-4">
               
                <a asp-controller="Doctor" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Update
                </button>
            </div>
        </form>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

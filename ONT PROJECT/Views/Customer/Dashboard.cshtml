@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "_CustomerLayout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome to Your Dashboard</h2>

    <div class="row">
        <!-- Repeats Left -->
        <div class="col-md-4 mb-4">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Repeats Left</h5>
                    <p>Panado: 2 / 10 <span class="text-muted float-end">20%</span></p>
                    <p>Amoxicillin: 5 / 10 <span class="text-muted float-end">50%</span></p>
                </div>
            </div>
        </div>

        <!-- Prescription Box -->
        <div class="col-md-4 mb-4">
            <div class="card border-info h-100">
                <div class="card-body">
                    <h5 class="card-title text-info">Prescription</h5>
                    <p><a href="/prescriptions/prescription.pdf" target="_blank">Download prescription.pdf</a></p>
                </div>
            </div>
        </div>

        <!-- Orders Box -->
        <div class="col-md-4 mb-4">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">Orders</h5>
                    <p>You have <strong>2 active orders</strong>.</p>
                    <ul class="mb-0">
                        <li>Order #1021</li>
                        <li>Order #1022</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Status Box -->
        <div class="col-md-4 mb-4">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <h5 class="card-title text-warning">Order Status</h5>
                    <p>Order #1021: <span class="badge bg-warning text-dark">Pending</span></p>
                    <p>Order #1022: <span class="badge bg-success">Ready for Collection</span></p>
                </div>
            </div>
        </div>
    </div>
</div>

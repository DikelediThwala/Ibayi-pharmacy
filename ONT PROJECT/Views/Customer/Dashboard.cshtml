@model ONT_PROJECT.Models.CustomerDashboardViewModel

@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1000, once: true });
</script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-xl py-4">

    <!-- Floating Welcome Card -->
    <div class="floating-card mb-4 mx-auto text-center bg-soft-primary shadow-sm" data-aos="fade-right">
        <h4 class="mb-1">Welcome, @(Model.User?.FirstName ?? "Customer")!</h4>
        <p class="mb-0">You have <strong>@Model.OrderCount orders</strong> and <strong>@Model.PrescriptionLineCount prescriptions</strong>.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md" data-aos="fade-up">
            <a asp-controller="Prescription" asp-action="Upload" class="text-decoration-none">
                <div class="info-card bg-soft-primary text-dark">
                    <div class="info-icon text-primary"><i class="bi bi-capsule-pill"></i></div>
                    <strong>Prescriptions</strong>
                    <div class="fs-4 fw-bold">@Model.PrescriptionLineCount</div>
                    <div class="info-context">My Prescriptions</div>
                </div>
            </a>
        </div>

        <div class="col-md" data-aos="fade-up" data-aos-delay="100">
            <a asp-controller="CustomerOrder" asp-action="OrderedMedication" class="text-decoration-none">
                <div class="info-card bg-soft-info text-dark">
                    <div class="info-icon text-info"><i class="bi bi-basket3"></i></div>
                    <strong>Orders</strong>
                    <div class="fs-4 fw-bold">@Model.OrderCount</div>
                    <div class="info-context">My Orders</div>
                </div>
            </a>
        </div>

        <div class="col-md" data-aos="fade-up" data-aos-delay="200">
            <a asp-controller="CustomerReport" asp-action="Index" class="text-decoration-none">
                <div class="info-card bg-soft-success text-dark">
                    <div class="info-icon text-success"><i class="bi bi-file-earmark-pdf"></i></div>
                    <strong>Reports</strong>
                    <div class="fs-5 fw-bold">Generate Reports</div>
                    <div class="info-context">Dispensed Prescriptions</div>
                </div>
            </a>
        </div>
    </div>

    <!-- Recent Orders -->
    <h4 class="mt-5 mb-3 text-primary" data-aos="fade-left">Recent Orders</h4>
    <div class="table-wrapper" data-aos="fade-up">
        @if (Model.RecentOrders.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Medicines</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.DatePlaced.ToString("yyyy-MM-dd")</td>
                            <td>
                                @foreach (var line in order.OrderLines)
                                {
                                    <span class="med-badge">@line.MedicineName</span>
                                }
                            </td>
                            <td>
                                <div class="status-container">
                                    <div class="progress w-100" style="height: 8px;">
                                        <div class="progress-bar @(
                                             order.Status == "Pending" ? "bg-warning" :
                                             order.Status == "Ordered" ? "bg-info" :
                                             order.Status == "Dispensed" ? "bg-success" : "bg-secondary")"
                                     role="progressbar"
                                     style="width: @(order.Status == "Pending" ? "25%" : order.Status == "Ordered" ? "50%" : order.Status == "Dispensed" ? "100%" : "0%");">
                                </div>
                            </div>
                            <span class="status-text mt-1 d-block fw-bold text-center @(
                                                                           order.Status == "Pending" ? "text-warning" :
                                                                           order.Status == "Ordered" ? "text-info" :
                                                                           order.Status == "Dispensed" ? "text-success" : "text-secondary")">
                                @order.Status
                            </span>
                        </div>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No recent orders.</p>
        }
    </div>

</div>

<!-- Dashboard Styles -->
<style>
    body {
        font-family: 'Varela Round', sans-serif;
        color: #566787;
        background: #f5f5f5;
    }

    .floating-card {
        padding: 2rem;
        border-radius: 20px;
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #e3f2fd; /* soft primary like index card */
    }

        .floating-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 30px rgba(0,0,0,0.15);
        }

    .info-card {
        background-color: #fff;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 1px 5px rgba(0,0,0,.1);
        text-align: center;
        transition: transform .3s, box-shadow .3s;
    }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

    .info-icon {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }

    .info-context {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .bg-soft-primary {
        background-color: #e3f2fd !important;
    }

    .bg-soft-success {
        background-color: #e6f4ea !important;
    }

    .bg-soft-info {
        background-color: #e5f6fd !important;
    }

    .table-wrapper {
        min-width: 900px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 5px;
        box-shadow: 0 1px 3px rgba(0,0,0,.1);
        margin-top: 20px;
    }

    .med-badge {
        display: inline-block;
        background-color: #dfe6ff;
        color: #2d3436;
        padding: 3px 8px;
        margin: 2px 2px 2px 0;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
        transition: all 0.3s;
    }

        .med-badge:hover {
            background-color: #6366f1;
            color: #fff;
        }

    .progress {
        border-radius: 12px;
        width: 100%;
    }

    .progress-bar {
        border-radius: 12px;
    }

    .status-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .status-text {
        font-size: 0.85rem;
        margin-top: 4px;
    }
</style>

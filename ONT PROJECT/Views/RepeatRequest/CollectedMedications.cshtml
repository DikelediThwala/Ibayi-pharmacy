@model List<ONT_PROJECT.Models.PrescriptionLine>

@{
    ViewData["Title"] = "Collected Medications";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container-xl mt-4">
    <div class="table-wrapper shadow-sm">
        <div class="table-title d-flex justify-content-between align-items-center">
            <h2><i class="material-icons me-2">&#xE863;</i> Collected <b>Medications</b></h2>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mt-3 text-center">No collected medications found.</div>
        }
        else
        {
            <form asp-controller="CustomerPrescriptionLine" asp-action="PlaceOrder" method="post" id="collectedMedForm">
                @Html.AntiForgeryToken()

                <div class="table-responsive mt-3">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th><input type="checkbox" id="selectAll" title="Select All" /></th>
                                <th>Medication</th>
                                <th>Instructions / Dosage</th>
                                <th>Quantity</th>
                                <th>Total Repeats</th>
                                <th>Repeats Left</th>
                                <th>Repeat Request</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model)
                            {
                                var rowClass = line.RepeatsLeft == 0 ? "table-danger" : "";
                                <tr class="@rowClass">
                                    <td class="text-center">
                                        <input type="checkbox" name="selectedLines" value="@line.PrescriptionLineId" class="line-checkbox" @(line.RepeatsLeft == 0 ? "disabled" : "") />
                                    </td>
                                    <td>@(line.Medicine?.MedicineName ?? "Unknown Medicine")</td>
                                    <td>@line.Instructions</td>
                                    <td>@line.Quantity</td>
                                    <td class="text-center">@line.Repeats</td>
                                    <td class="text-center">@line.RepeatsLeft</td>
                                    <td class="text-center">
                                        @if (line.RepeatsLeft > 0)
                                        {
                                            <a asp-controller="RepeatRequest" asp-action="RequestRepeat" asp-route-PrescriptionLineId="@line.PrescriptionLineId"
                                               class="btn btn-warning btn-sm" title="Request Repeat">
                                                <i class="material-icons">&#xE863;</i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No repeats left</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <button type="submit" class="btn btn-success mt-2">Place Order</button>
            </form>
        }
    </div>
</div>

<style>
    body {
        color: #566787;
        background: #f5f5f5;
        font-family: 'Varela Round', sans-serif;
        font-size: 13px;
    }

    .table-wrapper {
        min-width: 900px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 0.5rem;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-top: 20px;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
        font-size: 1.25rem;
        font-weight: 500;
    }

    .table td, .table th {
        text-align: center;
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table-danger {
        background-color: #f8d7da !important;
    }

    .btn-sm i {
        margin-right: 5px;
    }
</style>

<script>
    $(document).ready(function () {
        $('#selectAll').click(function () {
            $('.line-checkbox').not(':disabled').prop('checked', this.checked);
        });

        $('#collectedMedForm').on('submit', function (e) {
            if ($('.line-checkbox:checked').not(':disabled').length === 0) {
                e.preventDefault();
                alert('No medication selected. Please select at least one before placing an order.');
            }
        });
    });
</script>

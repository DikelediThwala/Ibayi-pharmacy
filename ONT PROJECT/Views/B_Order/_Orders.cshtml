@model List<ONT_PROJECT.Models.BOrder>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .table-wrapper {
        min-width: 1000px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-bottom: 30px;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }


    #TableWrapper {
        max-height: 540px;
        overflow-y: auto;
        display: block;
    }
    table.table tr th,
    table.table tr td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        vertical-align: middle;
    }

    .badge-status {
        font-size: 0.8rem;
        padding: 4px 8px;
        border-radius: 8px;
    }

    .order-header {
        background-color: #f7f7f7;
        font-weight: bold;
    }
</style>

<div class="container-xl my-4">
    <div class="table-wrapper">
        <div class="table-title d-flex justify-content-between align-items-center mb-2">
           <h2><i class="fas fa-clipboard-list"></i> Previous <b>Orders</b></h2>
           
        </div>

        <div id="TableWrapper">

            <table class="table table-hover" id="ordersTable">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Date Ordered</th>
                        <th>Supplier</th>
                        <th>Medicines</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var orderStatus = order.BOrderLines.All(l => l.Status == "Received") ? "Received" : "Pending";

                        <tr class="order-header" data-order-status="@orderStatus">
                            <td>@order.BOrderId</td>
                            <td>@order.DatePlaced.ToShortDateString()</td>
                            <td colspan="3"></td> 
                        </tr>

                        var supplierGroups = order.BOrderLines
                        .Where(l => l.Medicine != null && l.Medicine.Supplier != null)
                        .GroupBy(l => l.Medicine!.Supplier!.Name)
                        .ToList();

                        foreach (var group in supplierGroups)
                        {
                            var supplierStatus = group.All(l => l.Status == "Received") ? "Received" : "Pending";

                            <tr data-order-status="@orderStatus" data-supplier-status="@supplierStatus">
                                <td></td>
                                <td></td>
                                <td>@group.Key</td>
                                <td>
                                    <ul class="mb-0 ps-3">
                                        @foreach (var line in group)
                                        {
                                            <li>
                                                @line.Medicine!.MedicineName - Qty: @line.Quantity
                                                <span class="badge @(line.Status == "Received" ? "bg-success text-white" : "bg-warning text-dark") ms-1">
                                                    @line.Status
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @if (supplierStatus == "Received")
                                    {
                                        <i class="text-success">✓</i>
                                    }
                                    else
                                    {
                                        <form asp-action="MarkSupplierLinesAsReceived" asp-controller="B_Order" method="post">
                                            <input type="hidden" name="orderId" value="@order.BOrderId" />
                                            <input type="hidden" name="supplierName" value="@group.Key" />
                                            <button type="submit" class="btn btn-sm btn-success">Received</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
       </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {

        // Disable DataTables error alerts
        $.fn.dataTable.ext.errMode = 'none';

        // Initialize DataTable
        var table = $('#ordersTable').DataTable({
            pageLength: 6,          // show 6 rows per page
            lengthChange: false,
            ordering: true,
            order: [[1, "desc"]],
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });

        // Custom status filter
        $('#statusFilter').on('change', function () {
            var filterValue = $(this).val();

            table.rows().every(function () {
                var row = $(this.node());
                var orderStatus = row.data('order-status');
                var supplierStatus = row.data('supplier-status');

                if (!filterValue || orderStatus === filterValue || supplierStatus === filterValue) {
                    row.show();
                } else {
                    row.hide();
                }
            });

            table.draw(false);
        });
    });
</script>

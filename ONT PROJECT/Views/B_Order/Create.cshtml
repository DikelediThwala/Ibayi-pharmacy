@model ONT_PROJECT.Models.BOrder
@using Microsoft.AspNetCore.Mvc.Rendering


@{
    var medications = ViewBag.Medications as List<SelectListItem> ?? new List<SelectListItem>();
    var medList = medications.Select(m => new { m.Value, m.Text }).ToList();
}


<div class="modal fade" id="orderSummaryModal" tabindex="-1" aria-labelledby="orderSummaryLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderSummaryLabel">Confirm Your Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Medication</th>
                            <th>Quantity</th>
                            <th>Price per Unit</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody id="orderSummaryBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th id="orderTotalPrice">0.00</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmOrderBtn" class="btn btn-success">Confirm Order</button>
            </div>
        </div>
    </div>
</div>


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var entry in ViewData.ModelState)
            {
                foreach (var error in entry.Value.Errors)
                {
                    <li>@entry.Key: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<h4>Create Medication Order</h4>
<hr style="height: 4px; background-color: #011425; border: none;" />

<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="Create" asp-controller="B_Order" method="post" id="orderForm">
            @Html.AntiForgeryToken()
            @if (!medications.Any())
            {
                <div class="alert alert-warning">
                    No medications found. Please add medications before creating an order.
                </div>
            }
            else
            {
                <h5 class="mt-4">Order Lines</h5>
                <table class="table table-bordered" id="medicationTable">
                    <thead>
                        <tr>
                            <th>Medication</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="medicationTableBody">
                        <tr>
                            <td>
                                <select class="form-select" name="BOrderLines[0].MedicineId" required>
                                    <option disabled selected>-- Select Medication --</option>
                                    @foreach (var med in medications)
                                    {
                                        <option value="@med.Value">@med.Text</option>
                                    }
                                </select>
                            </td>
                            <td>
                                <input type="number" name="BOrderLines[0].Quantity" class="form-control" value="1" min="1" required />
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-primary" onclick="addMedicationRow()">Add Medication</button>
                    <button type="button" id="openOrderSummaryBtn" class="btn btn-success">Submit Order</button>
                </div>
            }
        </form>
    </div>
</div>

<script>
    let rowIndex = 1;
    const medicationOptions = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(medList));

    function addMedicationRow() {
        const tableBody = document.getElementById("medicationTableBody");
        let optionsHtml = '<option disabled selected>-- Select Medication --</option>';
        medicationOptions.forEach(med => {
            optionsHtml += `<option value="${med.Value}">${med.Text}</option>`;
        });

        const newRow = document.createElement("tr");
        newRow.innerHTML = `
            <td>
                <select class="form-select" name="BOrderLines[${rowIndex}].MedicineId" required>
                    ${optionsHtml}
                </select>
            </td>
            <td>
                <input type="number" name="BOrderLines[${rowIndex}].Quantity" class="form-control" value="1" min="1" required />
            </td>
            <td>
                <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Remove</button>
            </td>
        `;
        tableBody.appendChild(newRow);
        rowIndex++;
    }

    function removeRow(button) {
        const row = button.closest("tr");
        if (row) {
            row.remove();
        }
    }

        document.getElementById("orderForm").addEventListener("submit", function (e) {
        e.preventDefault();
        const form = this;

        fetch(form.action, {
            method: "POST",
            headers: {
                "Content-Type": "application/x-www-form-urlencoded",
                "RequestVerificationToken": form.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: new URLSearchParams(new FormData(form))
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message); // success message
                window.location.href = '/B_Order/Index?tab=orders';
                } else {
                alert(data.message); // error message from controller
            }
        })
        .catch(() => alert("Something went wrong. Please try again."));
    });


       

    const medicationPrices = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.MedicationPrices ?? new Dictionary<int, double>()));

    // Function to get medication name from medList by Id
    function getMedicationName(medId) {
        const med = medicationOptions.find(m => m.Value === medId.toString());
        return med ? med.Text : 'Unknown';
    }

    document.getElementById('openOrderSummaryBtn').addEventListener('click', function() {
        const tbody = document.getElementById('orderSummaryBody');
        tbody.innerHTML = ''; // Clear previous

        let totalPrice = 0;
        const form = document.getElementById('orderForm');

        // Collect all selected medications and quantities
        const meds = [];
        const selects = form.querySelectorAll('select[name^="BOrderLines"][name$="MedicineId"]');
           selects.forEach((select, index) => {
        const medId = select.value;
        const qtyInput = form.querySelector(`input[name="BOrderLines[${index}].Quantity"]`);
        if (medId && qtyInput && qtyInput.value > 0) {
            const qty = parseInt(qtyInput.value);
                const price = medicationPrices[String(medId)] || 0;
                const subtotal = qty * price;
            totalPrice += subtotal;

            meds.push({ medId, qty, price, subtotal });
        }
    });

        if (meds.length === 0) {
            alert('Please add at least one medication with quantity.');
            return;
        }

        // Build modal rows
        meds.forEach(med => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${getMedicationName(med.medId)}</td>
                <td>${med.qty}</td>
                <td>${med.price.toFixed(2)}</td>
                <td>${med.subtotal.toFixed(2)}</td>
            `;
            tbody.appendChild(tr);
        });

        document.getElementById('orderTotalPrice').textContent = totalPrice.toFixed(2);

        // Show the modal
        const orderModal = new bootstrap.Modal(document.getElementById('orderSummaryModal'));
        orderModal.show();

        // Handle Confirm button inside modal
        document.getElementById('confirmOrderBtn').onclick = function() {
            orderModal.hide();
            form.submit();  // Actually submit the form now
        };
    });

</script>
@model IEnumerable<ONT_PROJECT.Models.ActiveIngredient>

@{
    ViewData["Title"] = "Active Ingredients";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<!-- Table Styles -->
<style>
    body {
        color: #566787;
        font-family: 'Varela Round', sans-serif;
        font-size: 13px;
        background: #f5f5f5;
    }

    .table-wrapper {
        min-width: 700px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

        .table-title .btn {
            float: right;
            color: #fff;
            background: #03A9F4;
            border: none;
            min-width: 100px;
            border-radius: 2px;
            margin-left: 10px;
        }

            .table-title .btn i {
                margin-right: 4px;
            }

    table.table {
        text-align: center;
        vertical-align: middle;
    }

        table.table tr th, table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
        }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    table.table td a,
    table.table td button {
        font-weight: bold;
        text-decoration: none;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="mb-4 p-4 rounded shadow-sm bg-light border-start border-4 border-primary">
        <p class="lead text-muted mb-0">
            <i class="bi bi-info-circle-fill me-2 text-primary"></i>
            All active ingredients used in medications.
        </p>
    </div>
</div>

<!-- Page Content -->
<div class="container-xl my-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe06c;</i> Active <b>Ingredients List</b></h2>
                <a asp-action="Create" asp-controller="ActiveIngredient" class="btn btn-primary">
                    <i class="material-icons">&#xE147;</i> <span>Add Ingredient</span>
                </a>
            </div>

            <table id="activeIngredientTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th></th>
                        <th>Ingredient Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var ingredient in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@ingredient.Ingredients</td>
                            <td>
                                <a asp-action="Edit" asp-controller="ActiveIngredient" asp-route-id="@ingredient.ActiveIngredientId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <form asp-action="Delete" asp-controller="ActiveIngredient" asp-route-id="@ingredient.ActiveIngredientId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this ingredient?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="material-icons">&#xE872;</i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
        $('#activeIngredientTable').DataTable({
            pageLength: 8,
            lengthChange: false,
            searching: true,
            ordering: true,
            language: {
                search: "Search table:",
                paginate: {
                    previous: "← Previous",
                    next: "Next →"
                }
            }
        });

        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    });
</script>





































@model IEnumerable<ONT_PROJECT.Models.ActiveIngredient>

@{
    ViewData["Title"] = "Active Ingredients";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        min-width: 700px;
        background: #f5f5f5; /* grey container like your Users tables */
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-bottom: 2rem;
    }

    .table-title {
        color: #fff;
        background: #4b5366; /* dark header color */
        padding: 16px 25px;
        margin: -20px -25px 10px; /* removes the white gap above container */
        border-radius: 3px 3px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .table-title h2 {
            margin: 0;
            font-size: 20px;
        }


    table.table th, table.table td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
    }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="mb-4 p-4 rounded shadow-sm bg-light border-start border-4 border-primary">
        <p class="lead text-muted mb-0">
            <i class="bi bi-info-circle-fill me-2 text-primary"></i>
            All active ingredients used in medications.
        </p>
    </div>
</div>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe06c;</i> Active <b>Ingredients List</b></h2>
                <a asp-action="Create" asp-controller="ActiveIngredient" class="btn btn-primary">
                    <i class="material-icons">&#xE147;</i> Add Ingredient
                </a>
            </div>

            <!-- ACTIVE INGREDIENTS -->
            <table id="activeIngredientsTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th></th>
                        <th>Ingredient Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                      @foreach (var ingredient in Model){
                        <tr>
                            <td>@count</td>
                            <td>@ingredient.Ingredients</td>
                            <td>
                                <a asp-action="Edit" asp-controller="ActiveIngredient" asp-route-id="@ingredient.ActiveIngredientId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-id="@ingredient.ActiveIngredientId" data-name="@ingredient.Ingredients">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>

        <hr class="my-5" style="height: 4px; background-color: #011425; border: none;" />

        <!-- DEACTIVATED INGREDIENTS -->
        <p class="text-muted fs-5 mb-3">
            <i class="fas fa-info-circle text-danger"></i>
            List of <strong>Inactive Ingredients</strong>. You can reactivate them here.
        </p>
        <div class="table-wrapper">

            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe7ef;</i> Deactivated Ingredients</h2>
            </div>
            <table id="deactivatedIngredientsTable" class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th></th>
                        <th>Ingredient Name</th>
                        <th>Activate</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int deactCount = 1;
                    }
                    @foreach (var ingredient in ViewBag.DeactivatedIngredients as List<ONT_PROJECT.Models.ActiveIngredient>)
                    {
                        <tr>
                            <td>@deactCount</td>
                            <td>@ingredient.Ingredients</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-success activate-btn" data-id="@ingredient.ActiveIngredientId">
                                    <i class="material-icons">&#xE5CA;</i>
                                </button>
                            </td>
                        </tr>
                        deactCount++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivateIngredientModal" tabindex="-1" aria-labelledby="deactivateIngredientLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deactivateIngredientLabel">Deactivate Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to deactivate <strong id="ingredientName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeactivateIngredient" class="btn btn-danger">Deactivate</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function() {
        var ingredientIdToDeactivate = 0;

        // Initialize DataTables
        $('#activeIngredientsTable, #deactivatedIngredientsTable').DataTable({
            pageLength: 8,
            lengthChange: false,
            ordering: true,
            columnDefs: [{ orderable: false, targets: 2 }],
            language: { search: "Search table:", paginate: { previous: "← Previous", next: "Next →" } }
        });

        // Auto-close alerts
        setTimeout(() => $('.alert').each(function() { new bootstrap.Alert(this).close(); }), 4000);

        // Deactivate button click
        $(document).on('click', '.deactivate-btn', function() {
            ingredientIdToDeactivate = $(this).data('id');
            var name = $(this).data('name');
            $('#ingredientName').text(name);
            new bootstrap.Modal(document.getElementById('deactivateIngredientModal')).show();
        });

        // Confirm deactivate
        $('#confirmDeactivateIngredient').click(function() {
            if (ingredientIdToDeactivate) {
                $.post('/ActiveIngredient/Deactivate', { id: ingredientIdToDeactivate })
                .done(function() { location.reload(); })
                .fail(function() { alert('Failed to deactivate ingredient.'); });
            }
        });

        // Activate ingredient
        $(document).on('click', '.activate-btn', function() {
            var id = $(this).data('id');
            $.post('/ActiveIngredient/Activate', { id: id })
            .done(function() { location.reload(); })
            .fail(function() { alert('Failed to activate ingredient.'); });
        });
    });
</script>

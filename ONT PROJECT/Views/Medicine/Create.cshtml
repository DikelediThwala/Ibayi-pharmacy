@model ONT_PROJECT.Models.Medicine

@{
    ViewData["Title"] = "Manage Medicine";
    Layout = "_ManagerLayout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-capsule me-2 text-primary"></i> Add Medicine Details
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="SaveMedicine" enctype="multipart/form-data" method="post">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="MedicineName" class="form-label">Medicine Name <span class="text-danger">*</span></label>
                    <input asp-for="MedicineName" class="form-control" placeholder="e.g., Paracetamol" />
                    <span asp-validation-for="MedicineName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Schedule" class="form-label">Schedule <span class="text-danger">*</span></label>
                    <input asp-for="Schedule" class="form-control" placeholder="e.g., 1 (For Schedule 1)" />
                    <span asp-validation-for="Schedule" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Ingredients" class="form-label">Ingredients <span class="text-danger">*</span></label>
                    <input asp-for="Ingredients" class="form-control" placeholder="e.g., Paracetamol, Caffeine" />
                    <span asp-validation-for="Ingredients" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SalesPrice" class="form-label">Sales Price <span class="text-danger">*</span></label>
                    <input asp-for="SalesPrice" class="form-control" placeholder="e.g., 50.00" />
                    <span asp-validation-for="SalesPrice" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="SupplierID" class="form-label">Supplier <span class="text-danger">*</span></label>
                    <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-select">
                        <option value="">-- Select Supplier --</option>
                    </select>
                    <span asp-validation-for="SupplierID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ReorderLevel" class="form-label">Reorder Level <span class="text-danger">*</span></label>
                    <input asp-for="ReorderLevel" class="form-control" placeholder="e.g., 100" />
                    <span asp-validation-for="ReorderLevel" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
                    <input asp-for="Quantity" class="form-control" placeholder="e.g., 200" />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FormID" class="form-label">Form ID <span class="text-danger">*</span></label>
                    <input asp-for="FormID" class="form-control" placeholder="e.g., 1" />
                    <span asp-validation-for="FormID" class="text-danger small"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/Medicine/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (if not already included globally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

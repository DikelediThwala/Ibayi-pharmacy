@model ONT_PROJECT.Models.Pharmacy

@{
    ViewData["Title"] = "Manage Medication";
    Layout = "_ManagerLayout";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Medication</h2>
        <a asp-action="Create" asp-controller="Medicine" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Medicine
        </a>
    </div>
    <hr style="height: 5px; background-color: #011425; border: none;" />

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-start border-4 border-primary shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted fw-semibold">Total Medicines</h6>
                    <h3 class="fw-bold">8</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "B_Order")" class="text-decoration-none text-dark">
                <div class="card border-start border-4 border-warning shadow-sm" style="cursor:pointer;">
                    <div class="card-body">
                        <h6 class="text-muted fw-semibold">Low Stock</h6>
                        <h3 class="fw-bold">2</h3>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-4 border-info shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted fw-semibold">Critical Schedule (7+)</h6>
                    <h3 class="fw-bold">2</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Accordion -->
    <div class="accordion" id="medAccordion">

        @{
            var medications = new[]
            {
        new { Id = 1, Name = "Panado", Ingredient = "Paracetamol", Schedule = "Schedule 2", Form = "Tablet", Price = "R150" },
        new { Id = 2, Name = "Brufen", Ingredient = "Ibuprofen", Schedule = "Schedule 1", Form = "Capsule", Price = "R200" },
        new { Id = 3, Name = "Augmentin", Ingredient = "Amoxicillin + Clavulanic acid", Schedule = "Schedule 7", Form = "Tablet", Price = "R250" },
        new { Id = 4, Name = "Allergex", Ingredient = "Loratadine", Schedule = "Schedule 4", Form = "Tablet", Price = "R100" },
        new { Id = 5, Name = "Disprin", Ingredient = "Aspirin", Schedule = "Schedule 5", Form = "Tablet", Price = "R80" },
        new { Id = 6, Name = "Glucophage", Ingredient = "Metformin", Schedule = "Schedule 8", Form = "Tablet", Price = "R500" },
        new { Id = 7, Name = "Simvacor", Ingredient = "Simvastatin", Schedule = "Schedule 3", Form = "Tablet", Price = "R200" },
        new { Id = 8, Name = "Ventolin", Ingredient = "Salbutamol", Schedule = "Schedule 4", Form = "Inhaler", Price = "R120" }
        };

            int index = 0;
        }

        @foreach (var med in medications)
        {
            var collapseId = $"collapse{med.Id}";
            var headingId = $"heading{med.Id}";
            <div class="accordion-item mb-2">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @((index++ == 0 ? "" : "collapsed"))" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                        @med.Name (@med.Schedule)
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse @(index == 1 ? "show" : "")" aria-labelledby="@headingId" data-bs-parent="#medAccordion">
                    <div class="accordion-body">
                        <p><strong>Active Ingredient:</strong> @med.Ingredient</p>
                        <p><strong>Form:</strong> @med.Form</p>
                        <p><strong>Price:</strong> @med.Price</p>
                        <div class="text-end">
                            <a asp-action="Edit" asp-route-id="@med.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@med.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Accordion Styles -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>




















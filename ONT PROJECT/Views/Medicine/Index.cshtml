<body>

    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary mb-0">
                <i class="bi bi-capsule me-2"></i> Manage Medication
            </h2>
           
        </div>

        <hr style="height: 5px; background-color: #011425; border: none;" />

        <!-- Dashboard Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #1e3c72, #2a5298);">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-light">Total Medicines</h6>
                            <h3 class="fw-bold">@Model.Count</h3>
                        </div>
                        <i class="bi bi-capsule-pill fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <a href="@Url.Action("Index", "B_Order")" class="text-decoration-none">
                    <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #f7971e, #ffd200);">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="fw-light">Low Stock</h6>
                                <h3 class="fw-bold">@Model.Count(m => m.Quantity < m.ReorderLevel)</h3>
                            </div>
                            <i class="bi bi-exclamation-triangle-fill fs-1 opacity-75"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #2193b0, #6dd5ed);">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-light">Critical Schedule (5+)</h6>
                            <h3 class="fw-bold">@Model.Count(m => m.Schedule >= 5)</h3>
                        </div>
                        <i class="bi bi-clock-fill fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Medication</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="material-icons">&#xE147;</i> <span>Add Medicine</span>
                            </a>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Schedule</th>
                            <th>Ingredients</th>
                            <th>Form</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Strength</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var med in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@med.MedicineName</td>
                                <td>Schedule @med.Schedule</td>
                                <td>@string.Join(", ", med.MedIngredients.Select(i => i.ActiveIngredient.Ingredients))</td>
                                <td>@med.Form?.FormName</td>
                                <td>R@($"{med.SalesPrice:0.00}")</td>
                                <td>@med.Quantity</td>
                                <td>@string.Join(", ", med.MedIngredients.Select(i => i.Strength))</td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@med.MedicineId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                            <i class="material-icons">&#xE254;</i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@med.MedicineId" method="post" class="m-0 p-0" onsubmit="return confirm('Are you sure you want to delete this medicine?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="material-icons">&#xE872;</i>
                                            </button>
                                        </form>
                                    </div>
                                </td>

                            </tr>
                             count++;
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</body>



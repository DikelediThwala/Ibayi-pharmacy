@model List<ONT_PROJECT.Models.Medicine>

@{
    ViewData["Title"] = "Manage Medication";
    Layout = "_ManagerLayout";
}

<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        min-width: 900px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-bottom: 2rem;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

    table.table {
        text-align: center;
        vertical-align: middle;
    }

        table.table tr th,
        table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
        }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .btn-sm i {
        vertical-align: middle;
    }
</style>

<div class="container my-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show successAlert" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0"><i class="bi bi-capsule me-2"></i> Manage Medication</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4 py-2">
            <i class="material-icons">&#xE147;</i> Add Medicine
        </a>
    </div>

    <hr style="height: 5px; background-color: #011425; border: none;" />

    <!-- Dashboard Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #1e3c72, #2a5298);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-light">Active Medicines</h6>
                        <h3 class="fw-bold">@Model.Where(m => m.Status == "Active").Count()</h3>
                    </div>
                    <i class="bi bi-capsule-pill fs-1 opacity-75"></i>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "B_Order")" class="text-decoration-none">
                <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #f7971e, #ffd200);">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-light">Low Stock</h6>
                            <h3 class="fw-bold">@Model.Count(m => m.Quantity < m.ReorderLevel)</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill fs-1 opacity-75"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #2193b0, #6dd5ed);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-light">Critical Schedule (5+)</h6>
                        <h3 class="fw-bold">@Model.Count(m => m.Schedule >= 5)</h3>
                    </div>
                    <i class="bi bi-clock-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTIVE MEDICINES -->
    <section id="ActiveMeds">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center">
                <h2><i class="material-icons">&#xe548;</i> Active Medicines</h2>
            </div>
            <table id="activeTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Schedule</th>
                        <th>Ingredients</th>
                        <th>Form</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Strength</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                        foreach (var med in Model.Where(m => m.Status == "Active"))
                        {
                            <tr>
                                <td>@count</td>
                                <td>@med.MedicineName</td>
                                <td>Schedule @med.Schedule</td>
                                <td>@string.Join(", ", med.MedIngredients.Select(i => i.ActiveIngredient.Ingredients))</td>
                                <td>@med.Form?.FormName</td>
                                <td>R@($"{med.SalesPrice:0.00}")</td>
                                <td>@med.Quantity</td>
                                <td>@string.Join(", ", med.MedIngredients.Select(i => i.Strength))</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@med.MedicineId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                        <i class="material-icons">&#xE254;</i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger deactivate-btn" data-id="@med.MedicineId" title="Deactivate">
                                        <i class="material-icons">&#xE872;</i>
                                    </button>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- DEACTIVATED MEDICINES -->
    <section id="DeactivatedMeds" class="mt-5">
        <div class="table-wrapper">
            <div class="table-title d-flex justify-content-between align-items-center bg-secondary">
                <h2><i class="material-icons">&#xe5c9;</i> Deactivated Medicines</h2>
            </div>
            <table id="deactivatedTable" class="table table-striped table-hover">
                <thead class="table-danger">
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Schedule</th>
                        <th>Form</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Activate</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int dcount = 1;
                        foreach (var med in Model.Where(m => m.Status == "Deactivated"))
                        {
                            <tr>
                                <td>@dcount</td>
                                <td>@med.MedicineName</td>
                                <td>Schedule @med.Schedule</td>
                                <td>@med.Form?.FormName</td>
                                <td>R@($"{med.SalesPrice:0.00}")</td>
                                <td>@med.Quantity</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-success activate-btn" data-id="@med.MedicineId" title="Activate">
                                        <i class="material-icons">&#xE5CA;</i>
                                    </button>
                                </td>
                            </tr>
                            dcount++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" aria-labelledby="deactivateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deactivateModalLabel">Deactivate Medicine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to deactivate this medicine?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeactivate" class="btn btn-danger">Deactivate</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
        var medIdToDeactivate = 0;

        // Get anti-forgery token from hidden input or meta tag
        var token = $('input[name="__RequestVerificationToken"]').val() || $('meta[name="csrf-token"]').attr('content');

        // Initialize DataTables
        $('#activeTable, #deactivatedTable').DataTable({
            pageLength: 6,
            lengthChange: false,
            ordering: false
        });

        // Show Deactivate Modal
        $(document).on('click', '.deactivate-btn', function () {
            medIdToDeactivate = $(this).data('id');
            var medName = $(this).data('name') || '';
            $('#medicineName').text(medName);
            new bootstrap.Modal(document.getElementById('deactivateModal')).show();
        });

        // Confirm Deactivate
        $('#confirmDeactivate').click(function () {
            if (!medIdToDeactivate) return;

            $.ajax({
                url: '/Medicine/Deactivate/' + medIdToDeactivate, // include ID in URL
                type: 'POST',
                headers: { 'RequestVerificationToken': token }, // CSRF token
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert('Failed to deactivate medicine.');
                    }
                },
                error: function () {
                    alert('Failed to deactivate medicine.');
                }
            });
        });

        // Activate Medicine
        $(document).on('click', '.activate-btn', function () {
            var medId = $(this).data('id');
            $.ajax({
                url: '/Medicine/Activate/' + medId, // include ID in URL
                type: 'POST',
                headers: { 'RequestVerificationToken': token }, // CSRF token
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert('Failed to activate medicine.');
                    }
                },
                error: function () {
                    alert('Failed to activate medicine.');
                }
            });
        });
    });
</script>


@model List<ONT_PROJECT.Models.Medicine>

@{
    ViewData["Title"] = "Manage Medication";
    Layout = "_ManagerLayout";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(function () {
            var alert = document.querySelector('.alert');
            if (alert) {
                alert.classList.remove('show');
                alert.classList.add('hide');
            }
        }, 4000);
    </script>
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">
            <i class="bi bi-capsule me-2"></i> Manage Medication
        </h2>
        <a asp-action="Create" class="btn btn-primary shadow">
            <i class="bi bi-plus-circle"></i> Add Medicine
        </a>
    </div>

    <hr style="height: 5px; background-color: #011425; border: none;" />

    <!-- Dashboard Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #1e3c72, #2a5298);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-light">Total Medicines</h6>
                        <h3 class="fw-bold">@Model.Count</h3>
                    </div>
                    <i class="bi bi-capsule-pill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <a href="@Url.Action("Index", "B_Order")" class="text-decoration-none">
                <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #f7971e, #ffd200);">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-light">Low Stock</h6>
                            <h3 class="fw-bold">@Model.Count(m => m.Quantity < m.ReorderLevel)</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill fs-1 opacity-75"></i>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 text-white" style="background: linear-gradient(45deg, #2193b0, #6dd5ed);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-light">Critical Schedule (7+)</h6>
                        <h3 class="fw-bold">@Model.Count(m => m.Schedule >= 7)</h3>
                    </div>
                    <i class="bi bi-clock-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Medication Table -->
    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title text-primary mb-3"><i class="bi bi-capsule-pill me-1"></i> Medication List</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Name</th>
                            <th>Schedule</th>
                            <th>Ingredients</th>
                            <th>Form</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Strength</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model)
                        {
                            <tr>
                                <td>@med.MedicineName</td>
                                <td class="text-center">Schedule @med.Schedule</td>
                                <td>
                                    @string.Join(", ", med.MedIngredients.Select(i => i.ActiveIngredient.Ingredients))
                                </td>
                                <td>@med.Form?.FormName</td>
                                <td>R@($"{med.SalesPrice:0.00}")</td>
                                <td class="text-center">@med.Quantity</td>
                                <td>
                                    @string.Join(", ", med.MedIngredients.Select(i => i.Strength))
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@med.MedicineId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@med.MedicineId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.getElementById("inputGroupFile02").addEventListener("change", function (e) {
           const file = e.target.files[0];
           if (file && file.type === "application/pdf") {
               const fileURL = URL.createObjectURL(file);
               const pdfViewer = document.getElementById("pdfViewer");
               pdfViewer.src = fileURL;


               document.getElementById("pdfPreviewContainer").style.display = "block";
           } else {

               document.getElementById("pdfPreviewContainer").style.display = "none";
           }
       });

</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const container = document.getElementById('medicationContainer');

        container.addEventListener('click', function (e) {
            // Add new row
            if (e.target.classList.contains('add-btn')) {
                const row = e.target.closest('.medication-row');
                const newRow = row.cloneNode(true);

                // Reset values
                newRow.querySelectorAll('select, input, textarea').forEach(el => el.value = '');
                container.appendChild(newRow);
            }

            // Remove row
            if (e.target.classList.contains('remove-btn')) {
                const rows = container.querySelectorAll('.medication-row');
                if (rows.length > 1) {
                    e.target.closest('.medication-row').remove();
                }
            }
        });

        // Validate duplicate MedicineID selections
        container.addEventListener('change', function (e) {
            if (e.target.matches('select[name="MedicineID"]')) {
                const allSelects = Array.from(container.querySelectorAll('select[name="MedicineID"]'));
                const selectedValues = allSelects.map(sel => sel.value).filter(v => v !== '');

                // Check for duplicates
                const duplicates = selectedValues.filter((v, i, arr) => arr.indexOf(v) !== i);

                if (duplicates.length > 0) {
                    alert("You cannot select the same medication more than once!");
                    e.target.value = ''; // Reset the duplicated selection
                }
            }
        });

        // Optional: Validate before form submission
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function (e) {
                const allSelects = Array.from(container.querySelectorAll('select[name="MedicineID"]'));
                const selectedValues = allSelects.map(sel => sel.value).filter(v => v !== '');
                const duplicates = selectedValues.filter((v, i, arr) => arr.indexOf(v) !== i);

                if (duplicates.length > 0) {
                    e.preventDefault();
                    alert("Duplicate medications found. Please remove duplicates before saving.");
                }
            });
        }
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dragItem = document.getElementById("prescriptionPreview");
        const closeBtn = document.getElementById("closePdfBtn");

        if (dragItem) {
            const header = dragItem.querySelector(".pdf-header");
            let isDragging = false;
            let offsetX, offsetY;

            header.addEventListener("mousedown", function (e) {
                isDragging = true;
                offsetX = e.clientX - dragItem.offsetLeft;
                offsetY = e.clientY - dragItem.offsetTop;
                header.style.cursor = "grabbing";
            });

            document.addEventListener("mouseup", function () {
                isDragging = false;
                header.style.cursor = "grab";
            });

            document.addEventListener("mousemove", function (e) {
                if (isDragging) {
                    dragItem.style.left = (e.clientX - offsetX) + "px";
                    dragItem.style.top = (e.clientY - offsetY) + "px";
                }
            });
        }

        // Close button hides the draggable PDF
        if (closeBtn) {
            closeBtn.addEventListener("click", function () {
                dragItem.style.display = "none";
            });
        }
    });
</script>


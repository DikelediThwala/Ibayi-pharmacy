@model IBayiLibrary.Models.Domain.PrescriptionViewModel;
@{
    ViewData["Title"] = "Load Prescription";
    Layout = "PharmacistLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>

    .draggable-pdf {
        position: fixed;
        top: 100px;
        left: 100px;
        width: 500px;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        z-index: 9999;
        cursor: move;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }

    .pdf-header {
        cursor: grab;
        user-select: none;
        border-radius: 8px 8px 0 0;
    }

        .pdf-header:active {
            cursor: grabbing;
        }


    #pdfPreviewContainer {
        position: sticky;
        top: 10px;
    }

    .search-container {
        position: relative;
        width: 180px;
    }

        .search-container input[type="text"] {
            width: 100%;
            padding: 6px 30px 6px 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .search-container .search-icon {
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 16px;
            color: #888;
            pointer-events: none;
        }


    .data-line {
        display: flex;
        gap: 40px;
        font-family: sans-serif;
        margin-bottom: 10px;
    }

    .data-row {
        display: flex;
        align-items: center;
    }

    .data-label {
        font-weight: bold;
        margin-right: 8px;
        min-width: 120px;
    }

    .data-display {
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f9f9f9;
        color: #333;
        white-space: nowrap;
    }



    .popup {
        display: none;
        position: fixed;
        top: 30px;
        background-color: gray;
        color: white;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        z-index: 9999;
        transition: opacity 0.3s ease-in-out;
    }

        .popup.show {
            display: block;
            animation: fadeOut 4s forwards;
        }


    body {
        margin-top: 20px;
    }

    .alert {
        border-radius: 0;
        -webkit-border-radius: 0;
        box-shadow: 0 1px 2px rgba(0,0,0,0.11);
        display: table;
        width: 100%;
    }

    .alert-white {
        background-image: linear-gradient(to bottom, #fff, #f9f9f9);
        border-top-color: #d8d8d8;
        border-bottom-color: #bdbdbd;
        border-left-color: #cacaca;
        border-right-color: #cacaca;
        color: #404040;
        padding-left: 61px;
        position: relative;
    }

        .alert-white.rounded {
            border-radius: 3px;
            -webkit-border-radius: 3px;
        }

            .alert-white.rounded .icon {
                border-radius: 3px 0 0 3px;
                -webkit-border-radius: 3px 0 0 3px;
            }

        .alert-white .icon {
            text-align: center;
            width: 45px;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            border: 1px solid #bdbdbd;
            padding-top: 15px;
        }


            .alert-white .icon:after {
                -webkit-transform: rotate(45deg);
                -moz-transform: rotate(45deg);
                -ms-transform: rotate(45deg);
                -o-transform: rotate(45deg);
                transform: rotate(45deg);
                display: block;
                content: '';
                width: 10px;
                height: 10px;
                border: 1px solid #bdbdbd;
                position: absolute;
                border-left: 0;
                border-bottom: 0;
                top: 50%;
                right: -6px;
                margin-top: -3px;
                background: #fff;
            }

            .alert-white .icon i {
                font-size: 20px;
                color: #fff;
                left: 12px;
                margin-top: -10px;
                position: absolute;
                top: 50%;
            }

    .alert-success {
        color: #3c763d;
        background-color: #dff0d8;
        border-color: #d6e9c6;
    }

    .alert-white.alert-success .icon,
    .alert-white.alert-success .icon:after {
        border-color: #54a754;
        background: #60c060;
    }

    .alert-info {
        background-color: #d9edf7;
        border-color: #98cce6;
        color: #3a87ad;
    }

    .alert-white.alert-info .icon,
    .alert-white.alert-info .icon:after {
        border-color: #3a8ace;
        background: #4d90fd;
    }


    .alert-white.alert-warning .icon,
    .alert-white.alert-warning .icon:after {
        border-color: #d68000;
        background: #fc9700;
    }

    .alert-warning {
        background-color: #fcf8e3;
        border-color: #f1daab;
        color: #c09853;
    }

    .alert-danger {
        background-color: #f2dede;
        border-color: #e0b1b8;
        color: #b94a48;
    }

    .alert-white.alert-danger .icon,
    .alert-white.alert-danger .icon:after {
        border-color: #ca452e;
        background: #da4932;
</style>



<div id="popupNotification" class="popup">
    <strong>⚠️Warning!</strong>
    Customer has an allergy for this Medication!
</div>
<hr style="height: 4px; background-color: #011425; border: none;" />
<div class="card shadow p-4">
    <div class="card-body">

        <form asp-action="CreatePrescForImmediateDispense" asp-controller="UploadPrescription" enctype="multipart/form-data" method="post">
            <div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
                <i class="bi bi-info-circle-fill"></i>
                Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
            </div>

            <h2>Customer Prescription</h2>
            <hr />
            <div class="row mb-4 align-items-end">
                <div class="col-md-4">  
                    <label asp-for="CustomerID" class="form-label">Customer Name</label>
                    <input asp-for="CustomerID" type="hidden" />
                    <!-- Readonly display -->
                    <input type="text" class="form-control" value="@Model.FirstName" readonly />
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-4">
    
                    <label asp-for="DoctorID" class="form-label">Doctors <span class="text-danger">*</span></label>               
                    <select asp-for="DoctorID" class="form-select" asp-items="@ViewBag.DoctorID">
                        <option value="">-- Select Doctor --</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <a asp-controller="Doctors" asp-action="CreateDoctor" type="button" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Add
                    </a>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="Date" class="form-label">Date <span class="text-danger">*</span></label>
                    <input asp-for="Date" type="datetime" class="form-control"value ="@Model.Date" />
                    
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>
            </div>
            <div id="medicationContainer">
                <div class="row mb-3 medication-row align-items-end">
                    <!-- Medication -->
                    <div class="col-md-3">
                        <label class="form-label">Medicine ID <span class="text-danger">*</span></label>
                        <select asp-for="MedicineID" class="form-select" asp-items="@ViewBag.MedicineID">
                            <option value="">-- Select Medication --</option>
                        </select>
                        
                    </div>                 
                    <!-- Quantity -->
                    <div class="col-md-2">
                        <label class="form-label">Quantity<span class="text-danger">*</span></label>
                        <input asp-for="Quantity" type="number" name="Quantity[]" value="0" min="1" max="100" step="1" class="form-control" />

                    </div>
                    <div class="col-md-2">
                        <label>Repeats<span class="text-danger">*</span></label>
                        <input asp-for="Repeats" type="number" value="0" min="1" max="100" step="1" class="form-control"/>
                    </div>

                    <div class="col-md-3">
                        <label>Instructions<span class="text-danger">*</span></label>
                        <input asp-for="Instructions" type="text" name="Instructions[]" class="form-control"/>

                    </div>
                    <!-- Buttons -->
                    <div class="col-md-2 d-flex gap-2">
                        <button type="button" class="btn btn-outline-primary add-btn">+</button>
                        <button type="button" class="btn btn-outline-danger remove-btn">–</button>
                    </div>
                </div>

            </div>
            @if (Model.PrescriptionPhoto != null && Model.PrescriptionPhoto.Length > 0)
            {
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Prescription File</h5>
                    <a asp-controller="UploadPrescription"
                       asp-action="DownloadPrescription"
                       asp-route-id="@Model.UnprocessedPrescriptionID"
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-download me-1"></i> Download PDF
                    </a>
                </div>
                @if (Model.PrescriptionPhoto != null && Model.PrescriptionPhoto.Length > 0)
                {
                    <div id="prescriptionPreview" class="draggable-pdf shadow-lg">
                        <div class="pdf-header bg-primary text-white px-3 py-2 d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-file-earmark-pdf me-2"></i> Prescription Preview</span>
                            <button type="button" class="btn btn-sm btn-light" id="closePdfBtn">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>

                        <iframe src="data:application/pdf;base64,@Convert.ToBase64String(Model.PrescriptionPhoto)"
                                width="100%" height="500px"
                                style="border: none; border-radius: 0 0 8px 8px;">
                        </iframe>
                    </div>
                }

            }

           
            <div class="d-flex justify-content-between mt-4">
                <a href="/Pharmacist/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-save me-1"></i>Save
                </button>
            </div>
        </form>
    </div>

</div>
</div>

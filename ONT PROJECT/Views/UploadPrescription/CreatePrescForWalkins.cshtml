<script>
    document.addEventListener('DOMContentLoaded', function () {
        const container = document.getElementById('medicationContainer');
        const form = document.querySelector('form');
        const customerSelect = document.querySelector('select[name="CustomerID"]');
        const alertContainer = document.getElementById('allergyAlertContainer');

        // 🌡️ Allergy-related variables
        let patientHasAllergies = false;
        let allergyAlertMessage = '';

        // 🩺 1️⃣ When a customer is selected, check allergies via AJAX
        if (customerSelect) {
            customerSelect.addEventListener('change', function () {
                const customerId = this.value;

                // Clear existing alert
                alertContainer.innerHTML = '';

                if (!customerId) {
                    patientHasAllergies = false;
                    allergyAlertMessage = '';
                    return;
                }

                fetch(`/UploadPrescription/CheckCustomerAllergies?customerId=${customerId}`)
                    .then(response => response.json())
                    .then(data => {
                        patientHasAllergies = data.hasAllergies;
                        allergyAlertMessage = data.message || '';

                        if (patientHasAllergies) {
                            // Create Bootstrap warning alert dynamically
                            alertContainer.innerHTML = `
                                <div class="alert alert-warning alert-dismissible fade show shadow-sm d-flex align-items-center gap-2 mt-3" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <div><strong>⚠️ Allergy Alert:</strong> ${allergyAlertMessage}</div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            `;
                        }
                    })
                    .catch(err => console.error("Error checking allergies:", err));
            });
        }

        // 💊 2️⃣ Handle Add / Remove Medication Rows
        container.addEventListener('click', function (e) {
            // ➕ Add new medication row
            if (e.target.classList.contains('add-btn')) {

                // ⚠️ Show allergy alert again when adding a new medication
                if (patientHasAllergies && allergyAlertMessage) {
                    alertContainer.innerHTML = `
                        <div class="alert alert-warning alert-dismissible fade show shadow-sm d-flex align-items-center gap-2 mt-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div><strong>⚠️ Allergy Alert:</strong> ${allergyAlertMessage}</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    `;
                }

                const row = e.target.closest('.medication-row');
                const newRow = row.cloneNode(true);

                // Reset all select/input/textarea values
                newRow.querySelectorAll('select, input, textarea').forEach(el => el.value = '');

                // Get the current number of rows to determine the next index
                const index = container.querySelectorAll('.medication-row').length;

                // Update input/select name attributes with the correct index for model binding
                newRow.querySelectorAll('select, input, textarea').forEach(el => {
                    if (el.name) {
                        el.name = el.name.replace(/\[\d+\]/, `[${index}]`);
                    }
                });

                container.appendChild(newRow);
            }

            // ➖ Remove a medication row
            if (e.target.classList.contains('remove-btn')) {
                const rows = container.querySelectorAll('.medication-row');
                if (rows.length > 1) {
                    e.target.closest('.medication-row').remove();

                    // Re-index remaining rows to keep model binding consistent
                    const allRows = container.querySelectorAll('.medication-row');
                    allRows.forEach((row, newIndex) => {
                        row.querySelectorAll('select, input, textarea').forEach(el => {
                            if (el.name) {
                                el.name = el.name.replace(/\[\d+\]/, `[${newIndex}]`);
                            }
                        });
                    });
                }
            }
        });

        // 🔁 3️⃣ Check for duplicate medication selections
        container.addEventListener('change', function (e) {
            if (e.target.matches('select[name*="MedicineID"]')) {
                const allSelects = Array.from(container.querySelectorAll('select[name*="MedicineID"]'));
                const selectedValues = allSelects.map(sel => sel.value).filter(v => v !== '');

                const duplicates = selectedValues.filter((v, i, arr) => arr.indexOf(v) !== i);
                if (duplicates.length > 0) {
                    alert("You cannot select the same medication more than once!");
                    e.target.value = ''; // Reset duplicate
                }
            }
        });

        // 🧾 4️⃣ Validate before submission (keep existing behavior)
        if (form) {
            form.addEventListener('submit', function (e) {
                const allSelects = Array.from(container.querySelectorAll('select[name*="MedicineID"]'));
                const selectedValues = allSelects.map(sel => sel.value).filter(v => v !== '');
                const duplicates = selectedValues.filter((v, i, arr) => arr.indexOf(v) !== i);

                if (duplicates.length > 0) {
                    e.preventDefault();
                    alert("Duplicate medications found. Please remove duplicates before saving.");
                    return false;
                }

                // Optional: confirm allergies again on submit
                if (patientHasAllergies) {
                    const confirmProceed = confirm(allergyAlertMessage + "\n\nDo you still want to continue?");
                    if (!confirmProceed) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
        }
    });
</script>


@model IEnumerable<IBayiLibrary.Models.Domain.tblOrder>

@{
    ViewData["Title"] = "Pack Orders";
    Layout = "PharmacistLayout";
    var firstOrder = Model.FirstOrDefault();
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="card mt-3">
    <div class="card-header bg-dark text-white">
        <h4>Pack <strong>Order</strong></h4>
    </div>
    @if (firstOrder != null)
    {
        <div class="mb-3">
            <h4>
                Customer: <strong>@firstOrder.FirstName @firstOrder.LastName</strong>
            </h4>
        </div>
    }
    <div class="card-body">
            <table class="table table-bordered table-hover mt-3">
                <thead class="table-light">
                    <tr>
                    <th></th>
                    <th>Medicine Name</th>
                    <th>Sales Price</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Line Total</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr id="prescription-@item.OrderID">
                        <td>
                            <input type="checkbox" class="form-check-input prescription-checkbox"
                                   value="@item.OrderID" />
                        </td>
                        <td>
                            @item.MedicineName
                        </td>
                        <td>@item.SalesPrice</td>
                        <td>@item.Quantity</td>
                        <td>@item.Status</td>
                        <td>@item.LineTotal</td>
                    </tr>
                }
                </tbody>
            </table>
        <div class="text-end mt-3">
            <button class="btn btn-primary process-btn">
                Pack
            </button>
        </div>
        
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(document).ready(function () {
        $(document).on('click', '.process-btn', function () {
            var button = $(this);
            var id = button.data('id');
            var row = button.closest('tr');

            $.ajax({
                url: '/Dispense/Process', // make sure this matches controller
                type: 'POST',
                data: { id: id },
                        success: function (response) {
        if (response.success) {
            // Update status column
            row.find('.status-cell span').text('Dispensed');

            // Replace the button with a green label
            button.replaceWith('<span class="text-success">Dispensed</span>');
        } else {
            alert("Error: Could not dispense prescription.");
        }
                        }

            });
        });
    });

</script>

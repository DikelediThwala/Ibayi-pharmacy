@model List<ONT_PROJECT.Models.PrescriptionLine>

@{
    ViewData["Title"] = "My Prescription Lines";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        color: #566787;
        background: #f5f5f5;
        font-family: 'Varela Round', sans-serif;
        font-size: 13px;
    }

    .table-wrapper {
        min-width: 900px;
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        margin-top: 30px;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

    table.table tr th, table.table tr td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        vertical-align: middle;
        text-align: center;
    }

    table.table-striped tbody tr:nth-of-type(odd) {
        background-color: #fff;
    }

    table.table-striped.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .allergy-indicator {
        display: inline-block;
        width: 12px;
        height: 12px;
        background-color: red;
        border-radius: 50%;
        margin-left: 5px;
        cursor: pointer;
    }

    .prescription-header {
        margin-bottom: 15px;
    }

    .prescription-box {
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 5px;
        background-color: #fdfdfd;
        box-shadow: 0 1px 3px rgba(0,0,0,.1);
    }
</style>

<div class="container-xl">
    <div class="table-wrapper">
        <div class="table-title">
            <h2>My <b>Prescriptions</b></h2>
        </div>

        <div class="mb-3">
            <span class="allergy-indicator"></span> Red indicates medication contains ingredients you are allergic to or no repeats left.
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (!Model.Any())
        {
            <p class="text-muted">No prescription lines available yet.</p>
        }
        else
        {
            <form asp-controller="CustomerPrescriptionLine" asp-action="PlaceOrder" method="post" id="placeOrderForm">
                @Html.AntiForgeryToken()

                <div class="mb-2">
                    <input type="checkbox" id="selectAll" /> Select All
                </div>

                @foreach (var prescriptionGroup in Model.GroupBy(pl => pl.PrescriptionId))
                {
                    var prescription = prescriptionGroup.First().Prescription;

                    <div class="prescription-box">
                        <div class="prescription-header">
                            <h5>Date: @prescription.Date.ToString("yyyy-MM-dd")</h5>
                            <h6>Doctor: @prescription.Doctor</h6>
                        </div>

                        <table class="table table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Select</th>
                                    <th>Medication</th>
                                    <th>Quantity</th>
                                    <th>Instructions</th>
                                    <th>Repeats Allowed</th>
                                    <th>Repeats Left</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in prescriptionGroup)
                                {
                                    var allergicIngredients = line.Medicine?.MedIngredients
                                    .Select(mi => mi.ActiveIngredient.Ingredients)
                                    .Where(ing => line.Prescription.Customer.CustomerAllergies
                                    .Select(ca => ca.ActiveIngredient.Ingredients)
                                    .Contains(ing))
                                    .ToList() ?? new List<string>();

                                    var isAllergic = allergicIngredients.Any();
                                    var noRepeatsLeft = (line.RepeatsLeft ?? 0) <= 0;
                                    var rowClass = isAllergic || noRepeatsLeft ? "table-danger" : "";

                                    <tr class="@rowClass">
                                        <td class="text-center">
                                            <input type="checkbox"
                                                   name="selectedLines"
                                                   value="@line.PrescriptionLineId"
                                                   class="line-checkbox"
                                                   @(isAllergic || noRepeatsLeft ? "disabled" : "") />
                                        </td>
                                        <td>
                                            @line.Medicine.MedicineName
                                            @if (isAllergic)
                                            {
                                                <span class="allergy-indicator" data-bs-toggle="tooltip" data-bs-placement="top"
                                                      title="Contains: @string.Join(", ", allergicIngredients)"></span>
                                            }
                                        </td>
                                        <td>@line.Quantity</td>
                                        <td>@line.Instructions</td>
                                        <td>@line.Repeats @* ?? 0 *@</td>
                                        <td>
                                            @if (line.RepeatsLeft > 0)
                                            {
                                                @(line.RepeatsLeft)
                                            }
                                            else
                                            {
                                                <span class="text-danger">No repeats left</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <button type="submit" class="btn btn-success mt-2">Place Order</button>
            </form>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Select All checkbox functionality
        $('#selectAll').click(function () {
            $('.line-checkbox').not(':disabled').prop('checked', this.checked);
        });

        $('.line-checkbox').change(function () {
            var allSelectable = $('.line-checkbox').not(':disabled').length;
            var checkedSelectable = $('.line-checkbox:checked').not(':disabled').length;
            $('#selectAll').prop('checked', allSelectable === checkedSelectable);
        });

        // Form validation: at least one medication selected
        $('#placeOrderForm').on('submit', function (e) {
            if ($('.line-checkbox:checked').not(':disabled').length === 0) {
                e.preventDefault();
                alert('No medication selected. Please select at least one before placing an order.');
            }
        });
    });
</script>


@model ONT_PROJECT.Models.PrescriptionLine

@{
    ViewData["Title"] = "Create Prescription Line";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Add Prescription
    </h2>
</div>

<hr style="height: 4px; background-color: #011425; border: none;" />

<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <!-- Hidden PrescriptionId -->
            <input type="hidden" asp-for="PrescriptionId" />

        
            <!-- Medication -->
            <div class="mb-3">
                <label asp-for="MedicineId" class="form-label">Medication <span class="text-danger">*</span></label>
                <select asp-for="MedicineId" asp-items="ViewBag.Medicines" class="form-select">
                    <option value="">-- Select Medication --</option>
                </select>
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
                <input asp-for="Quantity" type="number" value="0" min="0" max="100" step="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Instructions -->
            <div class="mb-3">
                <label asp-for="Instructions" class="form-label">Instructions</label>
                <input asp-for="Instructions" class="form-control" />
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>

            <!-- Repeats -->
            <div class="mb-3">
                <label asp-for="Repeats" class="form-label">Repeats</label>
                <input asp-for="Repeats" type="number" value="0" min="0" max="100" step="1" class="form-control" />
                <span asp-validation-for="Repeats" class="text-danger"></span>
            </div>

            <!-- Repeats Left -->
            <div class="mb-3">
                <label asp-for="RepeatsLeft" class="form-label">Repeats Left</label>
                <input asp-for="RepeatsLeft" type="number" value="0" min="0" max="100" step="1" class="form-control" />
                <span asp-validation-for="RepeatsLeft" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/CustomerPrescriptionLine/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>

        </form>

    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />



    @{
        ViewData["Title"] = "Dispense Prescription";
        Layout = "PharmacistLayout";
    }
    <title>Dispense Prescription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .table-sm td, .table-sm th {
            padding: .25rem;
        }

        .alert-area {
            margin-top: 1rem;
            display: none;
        }
    </style>

<body>
    <h2>Dispense</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <label for="CustomerID" class="form-label">
                Customers 
            </label>
            <select for="CustomerID" class="form-select">
                <option value="">-- Select Customer --</option>
                <option value="Asenathi Lubelo">Asenathi Lubelo</option>
                <option value="Heken Bayui">Heken Bayui</option>
                <option value="Incident Feran">Incident Feran</option>
                <option value="Emihle Wetboi">Emihle Wetboi</option>
            </select>
            <span validation-for="CustomerID" class="text-danger small"></span>
        </div>     
        <div class="col-md-3 d-flex align-items-end">
            <div class="search-container w-100">
                <input type="text" placeholder="Search Customer..." class="form-control">
                <i class="fas fa-search search-icon"></i>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-4">
            <label for="CustomerID" class="form-label">CustomerID</label>
            <input for="CustomerID" type="text" class="form-control" disabled />
            <span validation-for="CustomerID" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label for="Date Of Birth" class="form-label">Date Of Birth</label>
            <input for="Date Of Birth" type="text" class="form-control" disabled />
            <span validation-for="Date Of Birth" class="text-danger small"></span>
        </div>
</div>
    
    <h5>Prescriptions</h5>
    <table class="table table-bordered table-sm" id="prescriptionTable">
        <thead class="table-light">
            <tr>
                
                <th>Doctor</th>
                <th>Date</th>
                <th>Medicine</th>
                <th>Repeats</th>
                <th>Repeats Left</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                
                <td>Dr. Peters</td>
                <td>2025-05-01</td>
                <td>Acetaminophen (Tylenol)</td>
                <td>2</td>
                <td>2</td>
                <td><button class="btn btn-sm btn-primary load-btn">Load</button></td>
            </tr>
            <tr>
                
                <td>Dr. Bream</td>
                <td>2025-05-10</td>
                <td>Loratadine (Claritin)</td>
                <td>1</td>
                <td>1</td>
                <td><button class="btn btn-sm btn-primary load-btn">Load</button></td>
            </tr>
        </tbody>
    </table>

    
    <h5>Prescription Details</h5>
    <table class="table table-bordered table-sm" id="medicationTable">
        <thead class="table-light">
            <tr>
                <th></th>
                <th>Medication</th>
                <th>Qty</th>
                <th>Instructions</th>
                <th>Repeats</th>
                <th>Repeats Left</th>
                
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>

    
    <div class="alert alert-danger alert-area" id="alertBox">⚠️ Cannot dispense: repeats are exhausted.</div>

    
    <a asp-action="ViewPrescription" asp-controller="Pharmacist" class="btn btn-success" id="dispenseBtn">Dispense</a>

    <script>
        const medications = [
          { medication: "Panado", qty: 10, instructions: "1 tablet every 6 hrs", repeats: 3, repeatsLeft: 2 },
          { medication: "Allergex", qty: 5, instructions: "2 tablets at night", repeats: 2, repeatsLeft: 0 },
        ];

        document.querySelectorAll('.load-btn').forEach((btn, index) => {
          btn.addEventListener('click', () => {
            const tbody = document.querySelector('#medicationTable tbody');
            tbody.innerHTML = ''; 
            medications.forEach((med, i) => {
              const row = `
                <tr>
                  <td><input type="checkbox" class="med-check" data-index="${i}" /></td>
                  <td>${med.medication}</td>
                  <td>${med.qty}</td>
                  <td>${med.instructions}</td>
                  <td>${med.repeats}</td>
                  <td>${med.repeatsLeft}</td>
                </tr>`;
              tbody.insertAdjacentHTML('beforeend', row);
            });
          });
        });

        document.getElementById('dispenseBtn').addEventListener('click', () => {
          const checked = [...document.querySelectorAll('.med-check:checked')];
          const hasIssue = checked.some(cb => medications[cb.dataset.index].repeatsLeft <= 0);

          const alertBox = document.getElementById('alertBox');
          if (hasIssue) {
            alertBox.style.display = 'block';
          } else {
            alertBox.style.display = 'none';
            alert('Dispensed successfully!');
          }
        });
    </script>
</body>



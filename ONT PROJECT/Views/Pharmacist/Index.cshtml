@model IEnumerable<IBayiLibrary.Models.Domain.tblOrder>

@{
    ViewData["Title"] = "Pharmacist Dashboard";
    Layout = "PharmacistLayout";   
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
        }

        .dashboard-header {
            margin-bottom: 2rem;
        }

            .dashboard-header h4 {
                font-weight: 700;
                color: #333;
            }

        .card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            }

        .card-body h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .card-body p {
            font-size: 1rem;
            color: #f1f1f1;
            margin: 0;
        }

        .card.bg-dark {
            background: linear-gradient(135deg, #232526, #414345);
            color: #fff;
        }

        .card.bg-light {
            background: linear-gradient(135deg, #007bff, #00aaff);
            color: #333;
        }

        .card.bg-info {
            background: linear-gradient(135deg, #007bff, #00aaff);
            color: #fff;
        }

        .table {
            border-radius: 12px;
            overflow: hidden;
            background-color: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

            .table th {
                background-color: #f1f3f6;
                font-weight: 600;
                color: #555;
            }

            .table td, .table th {
                padding: 14px;
                vertical-align: middle;
            }

        .btn {
            border-radius: 8px;
            font-size: 0.9rem;
            padding: 6px 14px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        h5 {
            font-weight: 600;
            color: #333;
        }

        .section-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.75rem;
        }

        .card-section {
            margin-top: 2rem;
        }

        .quick-action-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #fff;
            padding: 16px;
            border-radius: 12px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
            transition: all 0.2s ease-in-out;
            height: 110px;
            text-align: center;
            font-weight: 600;
            color: #011425;
        }

            .quick-action-card i {
                font-size: 1.6rem;
                margin-bottom: 6px;
            }

            .quick-action-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 18px rgba(0,0,0,0.12);
                background: #f9f9f9;
            }
    </style>
</head>

<body>
    <div class="container py-4">

        <!-- Header -->
        <div class="dashboard-header">
            <h4>Welcome, <span class="text-primary">@ViewBag.FullName</span> 👋</h4>
            <p class="text-muted">Here’s an overview of your pharmacy operations today.</p>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card bg-dark">
                    <div class="card-body">
                        <a asp-action="GetOrdersMedication" asp-controller="Order" style="text-decoration: none; color: inherit;">
                        <h2>@ViewBag.TotalOrders</h2>
                        <p>Placed Orders</p>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <a asp-action="GetUnprocessedPrescription" asp-controller="UnproccessedPrescription" style="text-decoration: none; color: inherit;">
                            <h2>@ViewBag.NumberOfUnprocessedPresc</h2>
                            <p>Unprocessed Prescriptions</p>
                        </a>

                        
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card bg-info">
                    <div class="card-body">
                        <a asp-action="GetAllCustomers" asp-controller="Pharmacist" style="text-decoration: none; color: inherit;">
                        <h2>@ViewBag.NoOfReadyOrders</h2>
                        <p>Customers</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>      
        <div class="row gx-4 gy-4 mt-4">
            <!-- Quick Actions -->
            <div class="col-lg-8">
                <div class="row gx-3 gy-3">
                    <div class="dashboard-section-title">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </div>
                   
                    <div class="col-md-3">
                        <a asp-controller="Dispense" asp-action="DispensePrescription" class="quick-action-card text-decoration-none">
                            <i class="bi bi-building text-success"></i>
                            <span>Dispense Prescription</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Order" asp-action="GetOrdersMedication" asp-route-tab="neworder" class="quick-action-card text-decoration-none">
                            <i class="bi bi-cart-plus text-warning"></i>
                            <span>View Orders</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Pharmacist" asp-action="CreateUser" class="quick-action-card text-decoration-none">
                            <i class="bi bi-person-plus text-info"></i>
                            <span>Add Customer</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="UploadPrescription" asp-action="CreatePrescForWalkins" class="quick-action-card text-decoration-none">
                            <i class="bi bi-journal-medical text-primary"></i>
                            <span>Create Walkin's <br /> Prescriptions</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="UnproccessedPrescription" asp-action="GetUnprocessedPrescription" class="quick-action-card text-decoration-none">
                            <i class="bi bi-box-seam text-success"></i>
                            <span>View Unprocessed Prescriptions</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Doctors" asp-action="CreateDoctor" class="quick-action-card text-decoration-none">
                            <i class="bi bi-person-plus text-warning"></i>
                            <span>Add Doctor</span>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="PharmacistReport" asp-action="PharmacistGenerateReport" class="quick-action-card text-decoration-none">
                            <i class="bi bi-file-earmark-pdf text-danger"></i>
                            <span>Generate Report</span>
                        </a>
                    </div>
                </div>
              </div>

            <div class="section-title">
                <h5>Recent Orders</h5>
                <a asp-action="GetOrdersMedication" asp-controller="Order" class="btn btn-primary btn-sm">
                    View All
                </a>
            </div>

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Medicine</th>
                        <th>Date Placed</th>
                        <th>Sales Price</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderID</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.MedicineName</td>
                                <td>@item.DatePlaced?.ToString("yyyy-MM-dd")</td>
                                <td>R @item.SalesPrice</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No recent orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

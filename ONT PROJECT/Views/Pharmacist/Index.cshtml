
@{
    ViewData["Title"] = "Pharmacist";
    Layout = "PharmacistLayout";
}





<head>
    
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f7f9fc;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: translateY(-4px);
            }

        .card-body h2 {
            font-size: 2.5rem;
            margin: 0;
        }

        .card-body p {
            font-size: 1.1rem;
            margin-top: 8px;
        }

        .card.bg-dark {
            background-color: #2d2d2d !important;
            color: white;
        }

        .card.bg-info {
            background-color: #007bff !important;
            color: white;
        }

        .table {
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
        }

            .table th {
                background-color: #f1f1f1;
                font-weight: 600;
            }

            .table td, .table th {
                padding: 12px;
                vertical-align: middle;
            }

        .btn {
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 6px;
        }

        h4, h5 {
            font-weight: 600;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h4>Welcome Mr Asenathi!</h4>

        <div class="row text-white mt-4">
            <div class="col-md-4">
                <div class="card bg-dark">
                    <div class="card-body text-center">
                        <h2>20</h2>
                        <p>Total Customers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light text-dark">
                    <div class="card-body text-center">
                        <h2>9</h2>
                        <p>Unproccessed Prescription</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info">
                    <div class="card-body text-center">
                        <h2>7</h2>
                        <p>Uncollected Orders</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <!-- Recent Orders -->
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5>Recent Orders</h5>
                    <a class="btn btn-primary btn-sm" href="#">View All</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Medication</th>
                            <th>Repeats</th>
                            <th>Repeats Left</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Helen Jemen</td>
                            <td>Acetaminophen (Tylenol)</td>
                            <td>2</td>
                            <td>1</td>
                        </tr>
                        <tr>
                            <td>Lueli</td>
                            <td>Demiln</td>
                            <td>1</td>
                            <td>0</td>
                        </tr>
                    </tbody>
                </table>
            </div>           
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5>Uncollected Orders</h5>
                    <a class="btn btn-primary btn-sm" href="#">View All</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Cellphone No</th>
                            <th>Medication</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Lubabalo Mendy</td>
                            <td>078 678 6775</td>
                            <td>Acetaminophen (Tylenol)</td>
                            <td>R167,00</td>
                        </tr>
                        <tr>
                            <td>Deny Fas</td>
                            <td>067 678 5785</td>
                            <td>Acetaminophen (Tylenol)</td>
                            <td>R150,00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>




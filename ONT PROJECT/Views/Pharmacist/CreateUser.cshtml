@model ONT_PROJECT.Models.TblUser
@* @model IBayiLibrary.Models.Domain.tblUser *@

@{
    ViewData["Title"] = "Manage Users";
    Layout = "PharmacistLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Register User
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="CreateUser" enctype="multipart/form-data" method="post">
            <h2>Personal Details</h2>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label">Title <span class="text-danger">*</span></label>
                    <select asp-for="Title" class="form-select">
                        <option value="">-- Select Title --</option>
                        <option value="Mr.">Mr.</option>
                        <option value="Mrs.">Mrs.</option>
                        <option value="Miss">Miss</option>
                        <option value="Dr.">Dr.</option>
                    </select>
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Idnumber" class="form-label">ID Number <span class="text-danger">*</span></label>
                    <input asp-for="Idnumber" id="IDNumber" class="form-control" />
                    <span asp-validation-for="Idnumber" class="text-danger small"></span>
                </div>

            </div>
            <div class="row mb-4">
                <div class="col-md-6">

                    <label asp-for="FirstName" class="form-label"> Firstname <span class="text-danger">*</span></label>
                    <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="e.g.,Dikeledi" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">LastName <span class="text-danger">*</span></label>
                    <input asp-for="LastName" class="form-control" id="FirstName" placeholder="e.g.,Thwala" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
            </div>
            <h2>Contact Details</h2>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., user@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">Contact Number <span class="text-danger">*</span></label>
                    <input asp-for="PhoneNumber" id="IDNumber" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
            </div>
           @*  <hr />         
             <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Role" class="form-label">Role <span class="text-danger">*</span></label>
                    <input asp-for="Role" class="form-control" />
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>
            </div> *@
            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/Pharmacist/LoadPrescription" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
               @*  <a href="/Pharmacist/LoadPrescription"  class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </a> *@
               @*  <button type="submit" class="btn btn-success btn-sm">
                    Submit
                </button> *@
                <a asp-action="LoadPrescription" asp-controller="Pharmacist" type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-save me-1"></i> Save
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (if not already included globally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script>
    document.getElementById("FirstName").addEventListener("keypress", function (e) {
        let regex = /^[a-zA-Z]+$/;
        let key = String.fromCharCode(e.keyCode || e.which);
        if (!regex.test(key)) {
            e.preventDefault();
        }
    });
</script>
<script>
    document.getElementById("IDNumber").addEventListener("keypress", function (e) {
        // Allow only digits (0-9)
        if (!/[0-9]/.test(e.key)) {
            e.preventDefault();
        }
    });
</script>
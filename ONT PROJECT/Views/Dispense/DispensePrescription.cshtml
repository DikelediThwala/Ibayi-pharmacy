@model IEnumerable<IBayiLibrary.Models.Domain.PrescriptionModel>
@{
    var items = Model.FirstOrDefault();
    ViewData["Title"] = "Dispense Prescription";
    Layout = "PharmacistLayout";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="card mt-3">
    <div class="card-header bg-dark text-white">
        <h4>Dispense <strong>Prescriptions</strong></h4>
    </div>
    <div class="card-body">

        <!-- Search Form -->
        <form asp-action="DispensePrescription" method="get" class="mb-3">               
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Search by customer, doctor, or medication..."
                       value="@ViewBag.SearchTerm" />
               
            </div>
            <div class ="mb-3"></div>
            <div>
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Search
                </button>
            </div>
        </form>
       

        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            @if (items != null)
            {
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label for="CustomerID" class="form-label">First Name</label>
                        <input for="CustomerID" type="type" name="name" value="@items.FirstName" class="form-control" disabled />                      
                    </div>

                    <div class="col-md-4">
                        <label for="Date Of Birth" class="form-label">ID Number</label>
                        <input for="CustomerID" type="type" name="name" value="@items.IDNumber" class="form-control" disabled />                       
                    </div>
                </div>
            }          
            <!-- Only show table if a search was made -->
            <table class="table table-bordered table-hover mt-3">
                <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>Medications</th>                                  
                        <th>Repeats</th>
                        <th>Repeats Left</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr id="prescription-@item.PrescriptionID">
                                <td>
                                    <input type="checkbox" class="form-check-input prescription-checkbox"
                                           value="@item.PrescriptionID" />
                                </td>
                                <td>@item.MedicineName</td>
                                <td>@item.Repeats</td>
                                <td>@item.RepeatsLeft</td>
                                <td>@item.Name</td>
                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                <td class="status-cell">
                                    <span id="status-@item.PrescriptionID">@item.Status</span>
                                </td>
                                <td>                                  
                                    <!-- Process Button -->
                                    @if (item.Status != "Dispensed")
                                    {
                                        <button class="btn btn-primary process-btn"
                                                data-id="@item.PrescriptionID"
                                                >
                                            Dispense
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No prescriptions found for "@ViewBag.SearchTerm".
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>

    $(document).ready(function () {           
        $(document).on('click', '.process-btn', function () {
            var button = $(this);
            var id = button.data('id');
            var row = button.closest('tr');

            $.ajax({
                url: '/Dispense/Process', // make sure this matches controller
                type: 'POST',
                data: { id: id },
                        success: function (response) {
        if (response.success) {
            // Update status column
            row.find('.status-cell span').text('Dispensed');

            // Replace the button with a green label
            button.replaceWith('<span class="text-success">Dispensed</span>');
        } else {
            alert("Error: Could not dispense prescription.");
        }
                        }

            });
        });
    });
    
</script>

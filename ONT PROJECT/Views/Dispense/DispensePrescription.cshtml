@model IEnumerable<IBayiLibrary.Models.Domain.PrescriptionModel>
@{
    ViewData["Title"] = "Dispense Prescription";
    Layout = "PharmacistLayout";
}

<div class="card mt-3">
    <div class="card-header bg-dark text-white">
        <h4>Dispense <strong>Prescriptions</strong></h4>
    </div>
    <div class="card-body">

        <!-- Search Form -->
        <form asp-action="DispensePrescription" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Search by customer, doctor, or medication..."
                       value="@ViewBag.SearchTerm" />
               
            </div>
            <div class ="mb-3"></div>
            <div>
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Search
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <!-- Only show table if a search was made -->
            <table class="table table-bordered table-hover mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Customer</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Medications</th>
                        <th>Repeats</th>
                        <th>Repeats Left</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.Name</td>
                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                <td>@item.MedicineName</td>
                                <td>@item.Repeats</td>
                                <td>@item.RepeatsLeft</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-action="DispensePrescription"
                                       asp-route-id="@item.PrescriptionLineID"
                                       class="btn btn-primary btn-sm">
                                        Dispense
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No prescriptions found for "@ViewBag.SearchTerm".
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

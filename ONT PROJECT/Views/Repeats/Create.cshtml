@model ONT_PROJECT.Models.Repeats

@{
    ViewData["Title"] = "Manage Repeats";
    Layout = "_ClientLayout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Add Doctor
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="SaveDoctor" enctype="multipart/form-data" method="post">

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="CustomerID" class="form-label">Practice Number <span class="text-danger">*</span></label>
                    <input asp-for="CustomerID" class="form-control" rows="4" placeholder="G13454"></input>
                    <span asp-validation-for="CustomerID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="repeatsLeft" class="form-label">Contact Number <span class="text-danger">*</span></label>
                    <input asp-for="repeatsLeft" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="repeatsLeft" class="text-danger small"></span>
                </div>
            </div>


            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/Doctor/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (if not already included globally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

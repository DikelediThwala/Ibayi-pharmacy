@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/site.css" />




<div class="site-wrap">

    @* @Home Section@ *@          
   <section id="home" class="site-blocks-cover position-relative">
        <div class="site-blocks-cover" style="background-image: url('images/landingpage/backgroundpicture.jpeg'); background-size: cover; background-position: center; height: 100vh;">
            <div class="container h-100 d-flex flex-column justify-content-center align-items-center text-center">
                <div class="site-block-cover-content">
                    <h2 class="sub-title">Effective Medicine, New Medicine Everyday</h2>
                    <h1 style="color:darkcyan">YOUR HEALTH, OUR PRIORITY</h1>
                </div>

               
                <div class="d-flex flex-wrap justify-content-center mt-5 gap-3">
                    <div class="info-card slide-left p-4 text-white rounded shadow">
                        <h4>Customer Friendly</h4>
                        <p>Easy prescription loading and notifications when your medication is ready for collection.</p>
                    </div>

                    <div class="info-card slide-fade p-4 text-white rounded shadow">
                        <h4>Trusted Pharmacists</h4>
                        <p>Our licensed pharmacists ensure your prescriptions are dispensed safely and correctly.</p>
                    </div>

                    <div class="info-card slide-right p-4 text-white rounded shadow">
                        <h4>Manager Oversight</h4>
                        <p>Pharmacy managers maintain stock levels and ensure smooth operations for all users.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    



    @*@About Us Section@*@    
    <section class="py-5 bg-light" id="about-us">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-4">About Us</h2>
                    <p class="lead">
                        At <strong>Ibayi Pharmacy</strong>, we are committed to providing our community with trusted, personalized healthcare services.
                    </p>
                    <p>
                        Since 2024, we have dedicated ourselves to helping our customers live healthier, happier lives. Our team of licensed pharmacists and friendly staff work hard every day to offer expert advice, reliable prescriptions, online and over-the-counter solutions, and wellness support.
                    </p>
                    <p>
                        We believe healthcare should be easy, accessible, and compassionate — and we are proud to be your pharmacy of choice.
                    </p>
                </div>

                <div class="col-md-6 text-center">
                    <img src="~/images/about_us.jpg" alt="About Ibayi Pharmacy" class="img-fluid rounded shadow-sm" />
                </div>
            </div>
        </div>
    </section>

    <hr />

    @*@Services Section@  *@           
    <section id="services" class="py-5 bg-light">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="display-4 text-uppercase">Our Services</h2>
                    <p class="lead">At Ibhayi Pharmacy, we offer a range of specialized services for our customers, pharmacists, and pharmacy managers to ensure smooth prescription management and medication dispensing.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card border-light shadow-sm h-100">
                        <img src="~/images/landingpage/customer.jpg" class="card-img-top" alt="Customer Services" />

                        <div class="card-body">
                            <h4 class="card-title">Customer Services</h4>
                            <p class="card-text">As a customer, you can easily register, load your prescriptions, and track your repeat prescriptions. You will be notified when your prescriptions are ready for collection and can generate detailed reports of your dispensed prescriptions.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card border-light shadow-sm h-100">
                        <img src="~/images/landingpage/pharmacist.jpg" class="card-img-top" alt="Pharmacist Services" />
                        <div class="card-body">
                            <h4 class="card-title">Pharmacist Services</h4>
                            <p class="card-text">Pharmacists can dispense prescriptions, check for patient allergies, manage prescription repeats, and ensure all prescriptions are properly documented. Pharmacists can also generate reports based on medications dispensed.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card border-light shadow-sm h-100">
                        <img src="~/images/landingpage/manager.jpg" class="card-img-top" alt="Pharmacy Manager Services" />
                        <div class="card-body">
                            <h4 class="card-title">Pharmacy Manager Services</h4>
                            <p class="card-text">Pharmacy managers have full control over pharmacy details, medication stock, suppliers, and doctor records. They can also manage inventory levels, place orders, and generate stock-level reports to ensure a smooth pharmacy operation.</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <hr />

    @*@FAQ Section@ *@            
    <section id="FAQ" class="py-5">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-4 text-uppercase">Frequently Asked Questions </h2>
            </div>
        </div>
        <div class="faq_7" unique-script-id="w-w-dm-id">
            <div class="responsive-container-block">
                <div class="responsive-cell-block wk-tab-12 wk-mobile-12 wk-desk-5 wk-ipadp-5 faq-head-bg" id="imgk">
                    <div class="faq-head-content">
                        <p class="text-blk faq-heading1">
                            How can we help you?
                        </p>
                        <p class="text-blk faq-subheading">
                            Find answers to common questions about prescriptions, medications, services, and more.
                        </p>
                    </div>
                </div>
                <div class="responsive-cell-block wk-tab-12 wk-mobile-12 wk-desk-7 wk-ipadp-7 faq-dropdown-bg" id="imiw">
                    <div class="container-block" id="iwk5t">

                        <div class="faq">
                            <span class="faq-question-container">
                                <p class="text-blk faq-questions">
                                    Do I need a prescription to purchase medication?
                                </p>
                                <img class="openimg" src="https://workik-widget-assets.s3.amazonaws.com/widget-assets/images/arrow.svg">
                            </span>
                            <div class="answer-box">
                                <p class="text-blk faq-answer">
                                    Yes, medications require a valid prescription from a licensed healthcare provider.
                                </p>
                            </div>
                        </div>

                        <div class="faq">
                            <span class="faq-question-container">
                                <p class="text-blk faq-questions">
                                    Can I refill my prescription online or over the phone?
                                </p>
                                <img class="openimg" src="https://workik-widget-assets.s3.amazonaws.com/widget-assets/images/arrow.svg">
                            </span>
                            <div class="answer-box">
                                <p class="text-blk faq-answer">
                                    Yes, most prescriptions can be refilled online or by calling the pharmacy. Contact us for instructions or check our website for refill options.
                                </p>
                            </div>
                        </div>

                        <div class="faq">
                            <span class="faq-question-container">
                                <p class="text-blk faq-questions">
                                    How do I know if my medication is ready for collection?
                                </p>
                                <img class="openimg" src="https://workik-widget-assets.s3.amazonaws.com/widget-assets/images/arrow.svg">
                            </span>
                            <div class="answer-box">
                                <p class="text-blk faq-answer">
                                   Once the Pharmacist has dispensed your ordered medication,you will receive an email that your medication is ready for collection.
                                </p>
                            </div>
                        </div>

                        <div class="faq">
                            <span class="faq-question-container">
                                <p class="text-blk faq-questions">
                                    What should I do if I miss a dose of my medication?
                                </p>
                                <img class="openimg" src="https://workik-widget-assets.s3.amazonaws.com/widget-assets/images/arrow.svg">
                            </span>
                            <div class="answer-box">
                                <p class="text-blk faq-answer">
                                    It depends on the medication. Read the label or contact your doctor or pharmacist for advice on what to do if you miss a dose.
                                </p>
                            </div>
                        </div>


                        <div class="faq">
                            <span class="faq-question-container">
                                <p class="text-blk faq-questions">
                                    Can I speak with a pharmacist if I have questions about my medication?
                                </p>
                                <img class="openimg" src="https://workik-widget-assets.s3.amazonaws.com/widget-assets/images/arrow.svg">
                            </span>
                            <div class="answer-box">
                                <p class="text-blk faq-answer">
                                    Absolutely. Our pharmacists are available during business hours to answer any questions you may have about your prescriptions or over-the-counter products.
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <br />

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>


        <script src="~/js/jquery-3.3.1.min.js"></script>
        <script src="~/js/jquery-ui.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/js/jquery.magnific-popup.min.js"></script>
        <script src="~/js/aos.js"></script>

        <script src="js/main.js"></script>

        <script>
            $(document).ready(function()
            {
              let faqQuestionContainers = document.querySelectorAll(`[unique-script-id="w-w-dm-id"] .faq-question-container`);

              faqQuestionContainers.forEach(function(faqQuestionContainer) {
                faqQuestionContainer.onclick = function() {
                  this.parentElement.classList.toggle("active");
                };
              });
            })
        </script>
    </section>
</div>





@using Microsoft.EntityFrameworkCore
@inject ONT_PROJECT.Models.ApplicationDbContext _context
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    TblUser? user = null;
    byte[]? logoBytes = null;
    byte[]? profilePicBytes = null;

    if (userId != null)
    {
        user = _context.TblUsers
            .Include(u => u.Pharmacist)
                .ThenInclude(p => p.Pharmacies)
            .FirstOrDefault(u => u.UserId == userId);

        var pharmacy = _context.Pharmacies.FirstOrDefault();
        logoBytes = pharmacy?.Logo;

        profilePicBytes = user?.ProfilePicture;
    }

    var pharmacyLogoSrc = (logoBytes != null && logoBytes.Length > 0)
                          ? $"data:image/png;base64,{Convert.ToBase64String(logoBytes)}"
                          : Url.Content("~/images/logo_3-removebg-preview.png");

    var profilePicSrc = (profilePicBytes != null && profilePicBytes.Length > 0)
                        ? $"data:image/png;base64,{Convert.ToBase64String(profilePicBytes)}"
                        : Url.Content("~/images/register/default-profile.png");

    var fullName = $"{user?.FirstName ?? "Guest"} {user?.LastName ?? ""}".Trim();
    var role = user?.Role ?? "User";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ibayi Pharmacy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            width: 250px;
            background-color: #011425;
            color: white;
            z-index: 1000;
            transition: width .3s;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .nav-link {
                color: #5C7C89;
                white-space: nowrap;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #1F4959;
                    color: white;
                }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

            .sidebar .logo-section {
                padding: 1rem;
                text-align: center;
            }

                .sidebar .logo-section h4 {
                    white-space: nowrap;
                }

        .main {
            margin-left: 250px;
            transition: margin-left .3s;
        }

        .sidebar.collapsed ~ .main {
            margin-left: 80px;
        }

        .top-navbar {
            background-color: #f8f9fa;
            padding: .5rem 1rem;
            border-bottom: 1px solid #ddd;
        }

        .content-area {
            padding: 2rem;
        }

        .collapse-button {
            cursor: pointer;
        }

        .sidebar.collapsed .logo-section h4, .sidebar.collapsed .img-fluid {
            display: none;
        }

        .img-fluid {
            width: 150px;
            height: 60px;
            margin-top: 10px;
        }

        .dropdown-menu {
            min-width: 180px;
            z-index: 2000 !important;
        }

            .dropdown-menu .dropdown-item i {
                font-size: 1rem;
            }

        .sidebar .profile-section {
            padding: 1rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,.2);
        }

        .sidebar.collapsed .profile-text {
            display: none;
        }

        .profile-img {
            width: 80%;
            max-width: 100px;
            aspect-ratio: 1 / 1;
            object-fit: cover;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        /* When sidebar is collapsed */
        .sidebar.collapsed .profile-img {
            width: 50%;
            max-width: 40px;
            margin: 0 auto;
        }

    </style>
    @RenderSection("Styles", false)
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="profile-header d-flex align-items-center p-3 border-bottom">
         <img src="@profilePicSrc" alt="Profile Picture" class="profile-img" />
            <div class="profile-text">
                <div class="fw-bold">@fullName</div>
                <div style="color:cadetblue;">Manager</div>
            </div>
        </div>

        <div class="p-3 mt-auto collapse-button d-flex align-items-center gap-2" onclick="toggleSidebar()">
            <i class="bi bi-list fs-3" id="collapse-icon"></i>
        </div>

        <ul class="nav flex-column p-2">
            <li class="nav-item"><a class="nav-link active" asp-controller="Manager" asp-action="Dashboard"><i class="bi bi-grid"></i> <span>Dashboard</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Doctor" asp-action="Index"><i class="bi bi-person-badge"></i> <span>Doctors</span></a></li>
            <li class="nav-item">
                <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#medicationSubmenu">
                    <span><i class="bi bi-capsule"></i> <span>Medication</span></span>
                    <i class="bi bi-chevron-down"></i>
                </a>
                <div class="collapse ps-3" id="medicationSubmenu">
                    <ul class="nav flex-column">
                        <li><a class="nav-link" asp-controller="DosageForm" asp-action="Index"><i class="bi bi-diagram-3"></i> Dosage Forms</a></li>
                        <li><a class="nav-link" asp-controller="ActiveIngredient" asp-action="Index"><i class="bi bi-collection"></i> Ingredients</a></li>
                        <li><a class="nav-link" asp-controller="Medicine" asp-action="Index"><i class="bi bi-pencil-square"></i> Medication</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item"><a class="nav-link" asp-controller="Pharmacy" asp-action="Index"><i class="bi bi-pencil-square"></i> <span>Pharmacy Details</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Supplier" asp-action="Index"><i class="bi bi-truck"></i> <span>Suppliers</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="B_Order" asp-action=""><i class="bi bi-box-seam"></i> <span>Stock</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index"><i class="bi bi-people"></i> <span>Users</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="ManagerReport" asp-action="Index"><i class="bi bi-collection"></i> <span>Report</span></a></li>
        </ul>
    </div>

    <div class="main" id="main">
        <div class="top-navbar d-flex justify-content-between align-items-center px-3 py-2 shadow-sm">
            <img src="@pharmacyLogoSrc" alt="Pharmacy Logo" style="width:150px; height:60px; object-fit:contain;" />
            <div class="dropdown">
                <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
                   href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="fw-bold me-2">@fullName</span>
                    <img src="@profilePicSrc" alt="Profile Picture" style="width:50px;height:50px;object-fit:cover;border-radius:50%;" />
                </a>
                <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" asp-controller="ManagerSettings" asp-action="Details"><i class="bi bi-gear me-2"></i> Settings</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                </ul>
            </div>
        </div>

        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const icon = document.getElementById('collapse-icon');
            const main = document.getElementById('main');
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('collapsed');
            icon.classList.toggle('bi-chevron-left');
            icon.classList.toggle('bi-chevron-right');
        }
    </script>
    @RenderSection("Scripts", false)
</body>
</html>

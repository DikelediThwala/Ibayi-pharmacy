@model ONT_PROJECT.Models.Supplier

@{
    ViewData["Title"] = "Add Supplier";
    Layout = "_ManagerLayout";
}
@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-person-lines-fill me-2 text-primary"></i> Add Supplier
    </h2>
</div>

<!-- Custom HR -->
<hr style="height: 5px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please enter all required details. Fields marked with <span class="text-danger">*</span> are mandatory.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <h4 class="card-title mb-4">
            <i class="bi bi-person-lines-fill me-2"></i> Add New Supplier
        </h4>

        <form asp-action="Create" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name<span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Dikeledi Thwala" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContactNo" class="form-label">Contact Number<span class="text-danger">*</span></label>
                    <input asp-for="ContactNo" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email<span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., supplier@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/Supplier/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons CDN (if not already included) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<script>
    setTimeout(function () {

        var error = document.getElementById('errorAlert');
        if (error) {
            var bsAlert = new bootstrap.Alert(error);
            bsAlert.close();
        }
    }, 4000);
</script>

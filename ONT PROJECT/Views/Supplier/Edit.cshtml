@model ONT_PROJECT.Models.Supplier

@{
    ViewData["Title"] = "Edit Supplier";
    Layout = "_ManagerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-person-lines-fill me-2 text-primary"></i> Edit Supplier
    </h2>
</div>

<hr style="height: 5px; background-color: #011425; border: none;" />

<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please update the details below. Fields marked with <span class="text-danger">*</span> are required.
</div>

<div class="card shadow p-4">
    <div class="card-body">
        <h4 class="card-title mb-4">
            <i class="bi bi-person-lines-fill me-2"></i> Edit Supplier Details
        </h4>

        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="SupplierId" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Supplier Name<span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., ABC Medical Supplies" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContactName" class="form-label">Contact Name<span class="text-danger">*</span></label>
                    <input asp-for="ContactName" class="form-control" placeholder="e.g., John" />
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ContactSurname" class="form-label">Contact Surname<span class="text-danger">*</span></label>
                    <input asp-for="ContactSurname" class="form-control" placeholder="e.g., Smith" />
                    <span asp-validation-for="ContactSurname" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">E-mail Address<span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., supplier@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Status" class="form-label">Status<span class="text-danger">*</span></label>
                    <select asp-for="Status" class="form-select">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Update
                </button>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

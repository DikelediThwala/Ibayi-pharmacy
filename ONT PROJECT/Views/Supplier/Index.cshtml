@model IEnumerable<ONT_PROJECT.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
    .table-wrapper {
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        min-width: 700px;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

    table.table tr th, table.table tr td {
        border-color: #e9e9e9;
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
    }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .modal-body {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

<div class="container-xl my-4">

    <!-- ACTIVE SUPPLIERS -->
    <div class="table-wrapper mb-4">
        <div class="table-title d-flex justify-content-between align-items-center">
            <h2><i class="material-icons">&#xe532;</i> Active Suppliers</h2>
            <a asp-action="Create" class="btn btn-primary"><i class="material-icons">&#xE147;</i> Add Supplier</a>
        </div>
        <table id="activeSuppliersTable" class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var supplier in Model.Where(s => s.Status == "Active"))
                    {
                        <tr>
                            <td>@count</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.ContactNo</td>
                            <td>@supplier.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button class="btn btn-sm btn-outline-danger deactivate-btn" data-id="@supplier.SupplierId">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- DEACTIVATED SUPPLIERS -->
    <div class="table-wrapper">
        <div class="table-title d-flex justify-content-between align-items-center bg-secondary">
            <h2><i class="material-icons">&#xe7ef;</i> Deactivated Suppliers</h2>
        </div>
        <table id="deactivatedSuppliersTable" class="table table-striped table-hover">
            <thead class="table-danger">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Activate</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int dcount = 1;
                    foreach (var supplier in Model.Where(s => s.Status == "Deactivated"))
                    {
                        <tr>
                            <td>@dcount</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.ContactNo</td>
                            <td>@supplier.Email</td>
                            <td>
                                <form asp-action="Activate" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@supplier.SupplierId" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="material-icons">&#xE5CA;</i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        dcount++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Reassign & Deactivate Modal -->
<div class="modal fade" id="reassignModal" tabindex="-1" aria-labelledby="reassignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="reassignModalLabel">Reassign or Deactivate Medications</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reassignForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="supplierId" name="id" />
                    <div id="medicationsList" class="d-flex flex-column gap-2"></div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <div class="d-flex gap-2">
                    <button type="button" id="deactivateSelected" class="btn btn-warning d-none">Deactivate Selected</button>
                    <button type="button" id="confirmDelete" class="btn btn-danger">Deactivate Supplier</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
$(document).ready(function () {
    // Initialize DataTables
    $('#activeSuppliersTable').DataTable();
    $('#deactivatedSuppliersTable').DataTable();

    // Auto-hide success alert
    setTimeout(() => $('#successAlert').fadeOut('slow'), 3000);

    // URL for supplier deletion & fetching medications
    const deleteSupplierUrl = '@Url.Action("Delete", "Supplier")';
    const getSupplierMedsUrl = '@Url.Action("GetSupplierMedications", "Supplier")';

    let selectedSupplierId = 0;

    // Open modal on deactivate supplier
    $(document).on('click', '.deactivate-btn', function () {
        selectedSupplierId = $(this).data('id');
        $('#supplierId').val(selectedSupplierId);

        console.log('Clicked supplier ID:', selectedSupplierId);

        $.getJSON(getSupplierMedsUrl + '?id=' + selectedSupplierId, function(data) {
            let medsHtml = '';

            if (!data.meds || data.meds.length === 0) {
                medsHtml = '<p>This supplier has no medications. Click "Deactivate Supplier" to continue.</p>';
            } else {
                medsHtml += '<p>Select medications to deactivate or reassign:</p>';
                data.meds.forEach(med => {
                    let optionsHtml = '<option value="">-- Select Supplier --</option>';
                    data.otherSuppliers.forEach(s => {
                        optionsHtml += `<option value="${s.supplierId}">${s.name}</option>`;
                    });

                    medsHtml += `
                    <div class="d-flex align-items-center gap-3 mb-2 border p-2 rounded">
                        <input type="checkbox" class="form-check-input deactivate-checkbox" data-medid="${med.medicineId}">
                        <label class="mb-0 fw-bold flex-grow-1">${med.medicineName}</label>
                        <select class="form-select form-select-sm w-auto" name="reassignments[${med.medicineId}]">
                            ${optionsHtml}
                        </select>
                        <button type="button" class="btn btn-sm btn-outline-warning deactivate-med-btn d-none" data-medid="${med.medicineId}">Deactivate</button>
                    </div>`;
                });
            }

            $('#medicationsList').html(medsHtml);
            new bootstrap.Modal(document.getElementById('reassignModal')).show();
        }).fail(() => alert('Failed to load supplier medications.'));
    });

    // Show/hide individual deactivate button for each medicine
    $(document).on('change', '.deactivate-checkbox', function () {
        const medId = $(this).data('medid');
        const btn = $(`.deactivate-med-btn[data-medid="${medId}"]`);
        btn.toggleClass('d-none', !$(this).is(':checked'));

        $('#deactivateSelected').toggleClass('d-none', $('.deactivate-checkbox:checked').length === 0);
    });

        // Deactivate single medicine
       $(document).on('click', '.deactivate-med-btn', function () {
        const medId = $(this).data('medid');
        const token = $('input[name="__RequestVerificationToken"]').val();

        $.post({
            url: '/Medicine/Deactivate',
            data: { id: medId, __RequestVerificationToken: token },
            success: function (res) {
                if (res.success) {
                    const medDiv = $(`.deactivate-med-btn[data-medid="${medId}"]`).closest('div.mb-2');
                    medDiv.addClass('bg-light text-muted');
                    medDiv.find('select').prop('disabled', true);
                    medDiv.find('.deactivate-med-btn').text('Deactivated').prop('disabled', true);
                    medDiv.find('.deactivate-checkbox').prop('checked', false).prop('disabled', true);
                } else {
                    alert(res.message || 'Failed to deactivate medicine.');
                }
            },
            error: function () { alert('Failed to deactivate medicine.'); }
        });
    });

        $('#deactivateSelected').click(function () {
        const selectedMeds = $('.deactivate-checkbox:checked').map(function () { return $(this).data('medid'); }).get();
        if (!selectedMeds.length) return;
        if (!confirm(`Deactivate ${selectedMeds.length} selected medication(s)?`)) return;

        const token = $('input[name="__RequestVerificationToken"]').val();

        selectedMeds.forEach(id => {
            $.post('/Medicine/Deactivate', { id: id, __RequestVerificationToken: token })
            .done(function(res) {
                if (res.success) {
                    const medDiv = $(`.deactivate-med-btn[data-medid="${id}"]`).closest('div.mb-2');
                    medDiv.addClass('bg-light text-muted');
                    medDiv.find('select').prop('disabled', true);
                    medDiv.find('.deactivate-med-btn').text('Deactivated').prop('disabled', true);
                    medDiv.find('.deactivate-checkbox').prop('checked', false).prop('disabled', true);
                }
            })
            .fail(() => alert('Failed to deactivate medicine.'));
        });

        $('#deactivateSelected').addClass('d-none');
    });



    // Deactivate supplier
    $('#confirmDelete').click(function () {
        const formData = $('#reassignForm').serialize(); // includes supplierId & anti-forgery token
        $.post(deleteSupplierUrl, formData, function () {
            bootstrap.Modal.getInstance(document.getElementById('reassignModal')).hide();
            location.reload();
        }).fail(() => alert('Failed to deactivate supplier.'));
    });
});
</script>




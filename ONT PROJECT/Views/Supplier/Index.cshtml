@model IEnumerable<ONT_PROJECT.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
    Layout = "_ManagerLayout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- External Styles -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<!-- Custom Styles -->
<style>
    .table-wrapper {
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
        min-width: 700px;
    }

    .table-title {
        color: #fff;
        background: #4b5366;
        padding: 16px 25px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

    table.table {
        text-align: center;
        vertical-align: middle;
    }

        table.table tr th, table.table tr td {
            border-color: #e9e9e9;
            padding: 12px 15px;
        }

    table.table-hover tbody tr:hover {
        background: #f5f5f5;
    }

    .modal-body {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

<div class="container-xl my-4">

    <!-- ACTIVE SUPPLIERS -->
    <div class="table-wrapper mb-4">
        <div class="table-title d-flex justify-content-between align-items-center">
            <h2><i class="material-icons">&#xe532;</i> Active Suppliers</h2>
            <a asp-action="Create" class="btn btn-primary"><i class="material-icons">&#xE147;</i> Add Supplier</a>
        </div>
        <table id="activeSuppliersTable" class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var supplier in Model.Where(s => s.Status == "Active"))
                    {
                        <tr>
                            <td>@count</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.ContactNo</td>
                            <td>@supplier.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="material-icons">&#xE254;</i>
                                </a>
                                <button class="btn btn-sm btn-outline-danger deactivate-btn" data-id="@supplier.SupplierId">
                                    <i class="material-icons">&#xE872;</i>
                                </button>
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- DEACTIVATED SUPPLIERS -->
    <div class="table-wrapper">
        <div class="table-title d-flex justify-content-between align-items-center bg-secondary">
            <h2><i class="material-icons">&#xe7ef;</i> Deactivated Suppliers</h2>
        </div>
        <table id="deactivatedSuppliersTable" class="table table-striped table-hover">
            <thead class="table-danger">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Activate</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int dcount = 1;
                    foreach (var supplier in Model.Where(s => s.Status == "Deactivated"))
                    {
                        <tr>
                            <td>@dcount</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.ContactNo</td>
                            <td>@supplier.Email</td>
                            <td>
                                <form asp-action="Activate" method="post">
                                    <input type="hidden" name="id" value="@supplier.SupplierId" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="material-icons">&#xE5CA;</i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        dcount++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Reassign & Deactivate Modal -->
<div class="modal fade" id="reassignModal" tabindex="-1" aria-labelledby="reassignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="reassignModalLabel">Reassign or Deactivate Medications</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reassignForm">
                    <input type="hidden" id="supplierId" name="id" />
                    <div id="medicationsList" class="d-flex flex-column gap-2"></div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <div class="d-flex gap-2">
                    <button type="button" id="deactivateSelected" class="btn btn-warning d-none">Deactivate Selected</button>
                    <button type="button" id="confirmDelete" class="btn btn-danger">Deactivate Supplier</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        // ✅ Fix: dynamic base URL for both local and published versions
        const baseUrl = '@Url.Content("~/")';

        // Initialize DataTables
        $('#activeSuppliersTable').DataTable();
        $('#deactivatedSuppliersTable').DataTable();

        // Auto-hide success alert
        setTimeout(() => $('#successAlert').fadeOut('slow'), 3000);

        let selectedSupplierId = 0;

        // Open modal to deactivate supplier
        $(document).on('click', '.deactivate-btn', function () {
            selectedSupplierId = $(this).data('id');
            $('#supplierId').val(selectedSupplierId);

            // Fetch medications supplied by this supplier
            $.getJSON(baseUrl + 'Supplier/GetSupplierMedications/' + selectedSupplierId, function (data) {
                let medsHtml = '';

                if (!data.meds || data.meds.length === 0) {
                    medsHtml = '<p>This supplier has no medications. Click "Deactivate Supplier" to continue.</p>';
                    $('#medicationsList').html(medsHtml);
                    new bootstrap.Modal(document.getElementById('reassignModal')).show();
                    return;
                }

                medsHtml += '<p>This Supplier supplies these medications. Select which medications to deactivate or reassign:</p>';

                data.meds.forEach(med => {
                    let optionsHtml = '<option value="">-- Select Supplier --</option>';
                    if (data.otherSuppliers && data.otherSuppliers.length > 0) {
                        data.otherSuppliers.forEach(s => {
                            optionsHtml += `<option value="${s.supplierId}">${s.name}</option>`;
                        });
                    }

                    medsHtml += `
                        <div class="d-flex align-items-center gap-3 mb-2 border p-2 rounded">
                            <input type="checkbox" class="form-check-input deactivate-checkbox" data-medid="${med.medicineId}">
                            <label class="mb-0 fw-bold flex-grow-1">${med.medicineName}</label>

                            <div class="delegate-section">
                                <select class="form-select form-select-sm w-auto" name="reassignments[${med.medicineId}]">
                                    ${optionsHtml}
                                </select>
                            </div>

                            <button type="button" class="btn btn-sm btn-outline-warning deactivate-med-btn d-none"
                                data-medid="${med.medicineId}">
                                Deactivate
                            </button>
                        </div>`;
                });

                $('#medicationsList').html(medsHtml);
                new bootstrap.Modal(document.getElementById('reassignModal')).show();
            });
        });

        // Show deactivate button when checkbox checked
        $(document).on('change', '.deactivate-checkbox', function () {
            const medId = $(this).data('medid');
            const btn = $(`.deactivate-med-btn[data-medid="${medId}"]`);
            btn.toggleClass('d-none', !$(this).is(':checked'));

            const anyChecked = $('.deactivate-checkbox:checked').length > 0;
            $('#deactivateSelected').toggleClass('d-none', !anyChecked);
        });

        // Deactivate individual medication
        $(document).on('click', '.deactivate-med-btn', function () {
            const medId = $(this).data('medid');
            $.post(baseUrl + 'Medicine/Deactivate/' + medId, {}, function (res) {
                if (res.success) {
                    const medDiv = $(`.deactivate-med-btn[data-medid="${medId}"]`).closest('div.mb-2');
                    medDiv.addClass('bg-light text-muted');
                    medDiv.find('select').prop('disabled', true);
                    medDiv.find('.deactivate-med-btn').text('Deactivated').prop('disabled', true);
                    medDiv.find('.deactivate-checkbox').prop('checked', false).prop('disabled', true);
                }
            });
        });

        // Deactivate selected medications
        $('#deactivateSelected').click(function () {
            const selectedMeds = $('.deactivate-checkbox:checked').map(function () {
                return $(this).data('medid');
            }).get();

            if (selectedMeds.length === 0) return;
            if (!confirm(`Deactivate ${selectedMeds.length} selected medication(s)?`)) return;

            selectedMeds.forEach(id => {
                $.post(baseUrl + 'Medicine/Deactivate/' + id, {}, function (res) {
                    if (res.success) {
                        const medDiv = $(`.deactivate-med-btn[data-medid="${id}"]`).closest('div.mb-2');
                        medDiv.addClass('bg-light text-muted');
                        medDiv.find('select').prop('disabled', true);
                        medDiv.find('.deactivate-med-btn').text('Deactivated').prop('disabled', true);
                        medDiv.find('.deactivate-checkbox').prop('checked', false).prop('disabled', true);
                    }
                });
            });

            $('#deactivateSelected').addClass('d-none');
        });

        // Confirm supplier delete/deactivate
        $('#confirmDelete').click(function () {
            var formData = $('#reassignForm').serialize();
            $.post(baseUrl + 'Supplier/Delete/' + selectedSupplierId, formData, function () {
                var modalEl = document.getElementById('reassignModal');
                var modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide();
                location.reload();
            }).fail(() => alert('Failed to deactivate supplier.'));
        });

        // Activate supplier
        $(document).on('click', '.activate-btn', function () {
            var id = $(this).data('id');
            $.post(baseUrl + 'Supplier/Activate', { id: id })
                .done(function () { location.reload(); })
                .fail(function () { alert('Failed to activate supplier.'); });
        });
    });
</script>

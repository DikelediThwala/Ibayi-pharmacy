@model ONT_PROJECT.Models.Pharmacy

@{
    ViewData["Title"] = "Manage Pharmacy";
    Layout = "_ManagerLayout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Add Pharmacy Details
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="SavePharmacy" enctype="multipart/form-data" method="post">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Pharmacy Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Health First Pharmacy" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="HealthCounsilRegistrationNo" class="form-label">Health Council Reg. No. <span class="text-danger">*</span></label>
                    <input asp-for="HealthCounsilRegistrationNo" class="form-control" placeholder="e.g., HCR-123456" />
                    <span asp-validation-for="HealthCounsilRegistrationNo" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label">Address <span class="text-danger">*</span></label>
                    <textarea asp-for="Address" class="form-control" rows="4" placeholder="e.g., 123 Main Street, Port Elizabeth"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ContactNo" class="form-label">Contact Number <span class="text-danger">*</span></label>
                    <input asp-for="ContactNo" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., pharmacy@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="WebsiteUrl" class="form-label">Website <span class="text-danger">*</span></label>
                    <input asp-for="WebsiteUrl" class="form-control" placeholder="e.g., www.pharmacy.co.za" />
                    <span asp-validation-for="WebsiteUrl" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="PharmacistID" class="form-label">Responsible Pharmacist <span class="text-danger">*</span></label>
                    <select asp-for="PharmacistID" asp-items="ViewBag.Pharmacists" class="form-select">
                        <option value="">-- Select Pharmacist --</option>
                    </select>
                    <span asp-validation-for="PharmacistID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="VATRate" class="form-label">VAT Rate (%) <span class="text-danger">*</span></label>
                    <input asp-for="VATRate" class="form-control" placeholder="e.g., 15" />
                    <span asp-validation-for="VATRate" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Logo" class="form-label">Pharmacy Logo <span class="text-danger">*</span></label>
                <input asp-for="Logo" class="form-control" type="file" />
                <span asp-validation-for="Logo" class="text-danger small"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/Pharmacy/Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (if not already included globally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

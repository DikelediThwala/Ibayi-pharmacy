@model IBayiLibrary.Models.Domain.Doctor;

@{
    ViewData["Title"] = "Manage Doctors";
    Layout = "PharmacistLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark">
        <i class="bi bi-hospital me-2 text-primary"></i> Register Doctor
    </h2>
</div>

<!-- Separator -->
<hr style="height: 4px; background-color: #011425; border: none;" />

<!-- Info Card -->
<div class="alert alert-info shadow-sm d-flex align-items-center gap-2">
    <i class="bi bi-info-circle-fill"></i>
    Please ensure all details are accurate before saving. Fields marked with <span class="text-danger">*</span> are required.
</div>

<!-- Form Card -->
<div class="card shadow p-4">
    <div class="card-body">
        <form asp-action="CreateDoctor" enctype="multipart/form-data" method="post">
            <h2>Personal Details</h2>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">

                    <label asp-for="Name" class="form-label"> Firstname <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" id="Name" placeholder="e.g.,Dikeledi" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Surname" class="form-label">LastName <span class="text-danger">*</span></label>
                    <input asp-for="Surname" class="form-control" id="Surname" placeholder="e.g.,Thwala" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="PracticeNo" class="form-label">PracticeNo <span class="text-danger">*</span></label>
                        <input asp-for="PracticeNo" class="form-control" id="PracticeNo" placeholder="4734 3434 3434 3493" />
                        <span asp-validation-for="PracticeNo" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <h2>Contact Details</h2>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., user@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ContactNo" class="form-label">Contact Number <span class="text-danger">*</span></label>
                    <input asp-for="ContactNo" class="form-control" placeholder="e.g., 012 345 6789" />
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>
            </div>
            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" asp-controller="Pharmacist" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-success btn-sm">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<script>
    function allowOnlyLetters(event) {
        const regex = /^[a-zA-Z]+$/;
        const key = String.fromCharCode(event.keyCode || event.which);
        if (!regex.test(key)) {
            event.preventDefault();
        }
    }
    document.getElementById("Name").addEventListener("keypress", allowOnlyLetters);
    document.getElementById("Surname").addEventListener("keypress", allowOnlyLetters);
</script>
<script>
    function allowOnlyDigits(event) {
        // Allow only digits (0-9)
        if (!/[0-9]/.test(event.key)) {
            event.preventDefault();
        }
    }

    document.getElementById("PracticeNo").addEventListener("keypress", allowOnlyDigits);
    document.getElementById("ContactNo").addEventListener("keypress", allowOnlyDigits);
</script>

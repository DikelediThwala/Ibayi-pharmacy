@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ONT Project</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        @@import url('https://fonts.googleapis.com/css?family=Montserrat:400,800');

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(to right, darkcyan, white);
        }

        .card {
            background-color: #fff;
            border-radius: 15px;
            padding: 30px 25px;
            max-width: 450px;
            width: 90%;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
            text-align: center;
        }

            .card h3 {
                color: darkcyan;
                font-weight: 700;
                margin-bottom: 10px;
            }

            .card p {
                font-size: 14px;
                color: #555;
                margin-bottom: 20px;
            }

        .form-control {
            background-color: #eee;
            border: none;
            padding: 10px 12px;
            margin-bottom: 15px;
            font-size: 14px;
        }

            .form-control:focus {
                border-color: darkcyan;
                box-shadow: 0 0 0 0.2rem rgba(0,139,139,0.25);
            }

        .btn-darkcyan {
            background-color: darkcyan;
            color: #fff;
            font-weight: 600;
            border-radius: 20px;
            border: 1px solid darkcyan;
            padding: 10px 35px;
            text-transform: uppercase;
            transition: 0.3s;
        }

            .btn-darkcyan:hover {
                background-color: #00796b;
            }

        a {
            color: darkcyan;
            font-weight: 500;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .alert {
            font-size: 13px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="card">
        <h3>Forgot Password</h3>
        <p>Enter your registered email to reset your password</p>

        <form asp-action="ForgotPassword" method="post">
            <input type="email" name="email" class="form-control" required placeholder="example@email.com" />
            <button type="submit" class="btn btn-darkcyan w-100">Send Reset Link</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info text-center">@ViewBag.Message</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <div class="mt-3">
            <a asp-action="Register" asp-controller="CustomerRegister">Back to Login</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
